{% doc %}
  @prompt
    A magazine-style editorial layout
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-layout-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.spacing }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-editorial-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-editorial-hero-{{ ai_gen_id }} {
    grid-column: 1 / 13;
    position: relative;
    margin-bottom: {{ block.settings.spacing }}px;
  }

  .ai-editorial-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.hero_height }}px;
    object-fit: cover;
  }

  .ai-editorial-hero-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.hero_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-editorial-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-hero-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 40px;
    right: 40px;
    color: {{ block.settings.hero_text_color }};
    background: {{ block.settings.hero_overlay_color }};
    padding: 30px;
    max-width: 600px;
  }

  .ai-editorial-category-{{ ai_gen_id }} {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin-bottom: 12px;
    font-weight: 600;
    color: {{ block.settings.accent_color }};
  }

  .ai-editorial-hero-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_title_size }}px;
    line-height: 1.2;
    margin: 0 0 12px 0;
    font-weight: 700;
  }

  .ai-editorial-hero-excerpt-{{ ai_gen_id }} {
    font-size: 16px;
    line-height: 1.6;
    margin: 0 0 16px 0;
    opacity: 0.9;
  }

  .ai-editorial-hero-meta-{{ ai_gen_id }} {
    font-size: 14px;
    opacity: 0.8;
  }

  .ai-editorial-featured-{{ ai_gen_id }} {
    grid-column: 1 / 8;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .ai-editorial-sidebar-{{ ai_gen_id }} {
    grid-column: 8 / 13;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .ai-editorial-article-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    padding-bottom: 24px;
    border-bottom: 1px solid {{ block.settings.border_color }};
  }

  .ai-editorial-article-{{ ai_gen_id }}:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .ai-editorial-article-image-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 200px;
    height: 140px;
  }

  .ai-editorial-article-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-article-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-editorial-article-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-article-content-{{ ai_gen_id }} {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-editorial-article-title-{{ ai_gen_id }} {
    font-size: 20px;
    line-height: 1.3;
    margin: 0 0 8px 0;
    font-weight: 600;
    color: {{ block.settings.text_color }};
  }

  .ai-editorial-article-excerpt-{{ ai_gen_id }} {
    font-size: 14px;
    line-height: 1.6;
    margin: 0 0 12px 0;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
  }

  .ai-editorial-article-meta-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
    margin-top: auto;
  }

  .ai-editorial-sidebar-article-{{ ai_gen_id }} {
    padding-bottom: 20px;
    border-bottom: 1px solid {{ block.settings.border_color }};
  }

  .ai-editorial-sidebar-article-{{ ai_gen_id }}:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .ai-editorial-sidebar-image-{{ ai_gen_id }} {
    width: 100%;
    height: 180px;
    margin-bottom: 12px;
  }

  .ai-editorial-sidebar-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-sidebar-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-editorial-sidebar-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-sidebar-title-{{ ai_gen_id }} {
    font-size: 18px;
    line-height: 1.3;
    margin: 0 0 8px 0;
    font-weight: 600;
    color: {{ block.settings.text_color }};
  }

  .ai-editorial-sidebar-excerpt-{{ ai_gen_id }} {
    font-size: 13px;
    line-height: 1.5;
    margin: 0 0 8px 0;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
  }

  .ai-editorial-sidebar-meta-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  @media screen and (max-width: 989px) {
    .ai-editorial-featured-{{ ai_gen_id }},
    .ai-editorial-sidebar-{{ ai_gen_id }} {
      grid-column: 1 / 13;
    }

    .ai-editorial-hero-content-{{ ai_gen_id }} {
      bottom: 20px;
      left: 20px;
      right: 20px;
      padding: 20px;
    }

    .ai-editorial-hero-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.hero_title_size | times: 0.7 }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-editorial-article-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-editorial-article-image-{{ ai_gen_id }} {
      width: 100%;
      height: 200px;
    }

    .ai-editorial-hero-content-{{ ai_gen_id }} {
      position: static;
      background: {{ block.settings.background_color }};
      color: {{ block.settings.text_color }};
      padding: 20px 0;
    }

    .ai-editorial-category-{{ ai_gen_id }} {
      color: {{ block.settings.accent_color }};
    }
  }
{% endstyle %}

<div class="ai-editorial-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-editorial-grid-{{ ai_gen_id }}">
    <article class="ai-editorial-hero-{{ ai_gen_id }}">
      {% if block.settings.hero_image %}
        <img
          src="{{ block.settings.hero_image | image_url: width: 1600 }}"
          alt="{{ block.settings.hero_image.alt | escape }}"
          class="ai-editorial-hero-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.hero_image.width }}"
          height="{{ block.settings.hero_image.height }}"
        >
      {% else %}
        <div class="ai-editorial-hero-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
      <div class="ai-editorial-hero-content-{{ ai_gen_id }}">
        {% if block.settings.hero_category != blank %}
          <div class="ai-editorial-category-{{ ai_gen_id }}">{{ block.settings.hero_category }}</div>
        {% endif %}
        {% if block.settings.hero_title != blank %}
          <h2 class="ai-editorial-hero-title-{{ ai_gen_id }}">{{ block.settings.hero_title }}</h2>
        {% endif %}
        {% if block.settings.hero_excerpt != blank %}
          <p class="ai-editorial-hero-excerpt-{{ ai_gen_id }}">{{ block.settings.hero_excerpt }}</p>
        {% endif %}
        {% if block.settings.hero_author != blank or block.settings.hero_date != blank %}
          <div class="ai-editorial-hero-meta-{{ ai_gen_id }}">
            {% if block.settings.hero_author != blank %}
              By {{ block.settings.hero_author }}
            {% endif %}
            {% if block.settings.hero_author != blank and block.settings.hero_date != blank %}
              â€¢
            {% endif %}
            {% if block.settings.hero_date != blank %}
              {{ block.settings.hero_date }}
            {% endif %}
          </div>
        {% endif %}
      </div>
    </article>

    <div class="ai-editorial-featured-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign article_image_key = 'article_' | append: i | append: '_image'
          assign article_category_key = 'article_' | append: i | append: '_category'
          assign article_title_key = 'article_' | append: i | append: '_title'
          assign article_excerpt_key = 'article_' | append: i | append: '_excerpt'
          assign article_author_key = 'article_' | append: i | append: '_author'
          assign article_date_key = 'article_' | append: i | append: '_date'

          assign article_image = block.settings[article_image_key]
          assign article_category = block.settings[article_category_key]
          assign article_title = block.settings[article_title_key]
          assign article_excerpt = block.settings[article_excerpt_key]
          assign article_author = block.settings[article_author_key]
          assign article_date = block.settings[article_date_key]
        %}

        <article class="ai-editorial-article-{{ ai_gen_id }}">
          <div class="ai-editorial-article-image-{{ ai_gen_id }}">
            {% if article_image %}
              <img
                src="{{ article_image | image_url: width: 400 }}"
                alt="{{ article_image.alt | escape }}"
                loading="lazy"
                width="{{ article_image.width }}"
                height="{{ article_image.height }}"
              >
            {% else %}
              <div class="ai-editorial-article-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          <div class="ai-editorial-article-content-{{ ai_gen_id }}">
            {% if article_category != blank %}
              <div class="ai-editorial-category-{{ ai_gen_id }}">{{ article_category }}</div>
            {% endif %}
            {% if article_title != blank %}
              <h3 class="ai-editorial-article-title-{{ ai_gen_id }}">{{ article_title }}</h3>
            {% endif %}
            {% if article_excerpt != blank %}
              <p class="ai-editorial-article-excerpt-{{ ai_gen_id }}">{{ article_excerpt }}</p>
            {% endif %}
            {% if article_author != blank or article_date != blank %}
              <div class="ai-editorial-article-meta-{{ ai_gen_id }}">
                {% if article_author != blank %}
                  By {{ article_author }}
                {% endif %}
                {% if article_author != blank and article_date != blank %}
                  â€¢
                {% endif %}
                {% if article_date != blank %}
                  {{ article_date }}
                {% endif %}
              </div>
            {% endif %}
          </div>
        </article>
      {% endfor %}
    </div>

    <aside class="ai-editorial-sidebar-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign sidebar_image_key = 'sidebar_' | append: i | append: '_image'
          assign sidebar_category_key = 'sidebar_' | append: i | append: '_category'
          assign sidebar_title_key = 'sidebar_' | append: i | append: '_title'
          assign sidebar_excerpt_key = 'sidebar_' | append: i | append: '_excerpt'
          assign sidebar_author_key = 'sidebar_' | append: i | append: '_author'
          assign sidebar_date_key = 'sidebar_' | append: i | append: '_date'

          assign sidebar_image = block.settings[sidebar_image_key]
          assign sidebar_category = block.settings[sidebar_category_key]
          assign sidebar_title = block.settings[sidebar_title_key]
          assign sidebar_excerpt = block.settings[sidebar_excerpt_key]
          assign sidebar_author = block.settings[sidebar_author_key]
          assign sidebar_date = block.settings[sidebar_date_key]
        %}

        <article class="ai-editorial-sidebar-article-{{ ai_gen_id }}">
          <div class="ai-editorial-sidebar-image-{{ ai_gen_id }}">
            {% if sidebar_image %}
              <img
                src="{{ sidebar_image | image_url: width: 500 }}"
                alt="{{ sidebar_image.alt | escape }}"
                loading="lazy"
                width="{{ sidebar_image.width }}"
                height="{{ sidebar_image.height }}"
              >
            {% else %}
              <div class="ai-editorial-sidebar-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          {% if sidebar_category != blank %}
            <div class="ai-editorial-category-{{ ai_gen_id }}">{{ sidebar_category }}</div>
          {% endif %}
          {% if sidebar_title != blank %}
            <h3 class="ai-editorial-sidebar-title-{{ ai_gen_id }}">{{ sidebar_title }}</h3>
          {% endif %}
          {% if sidebar_excerpt != blank %}
            <p class="ai-editorial-sidebar-excerpt-{{ ai_gen_id }}">{{ sidebar_excerpt }}</p>
          {% endif %}
          {% if sidebar_author != blank or sidebar_date != blank %}
            <div class="ai-editorial-sidebar-meta-{{ ai_gen_id }}">
              {% if sidebar_author != blank %}
                By {{ sidebar_author }}
              {% endif %}
              {% if sidebar_author != blank and sidebar_date != blank %}
                â€¢
              {% endif %}
              {% if sidebar_date != blank %}
                {{ sidebar_date }}
              {% endif %}
            </div>
          {% endif %}
        </article>
      {% endfor %}
    </aside>
  </div>
</div>

