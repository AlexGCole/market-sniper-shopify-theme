{% comment %}
  sections/features.liquid
  Features grid with icons
{% endcomment %}

<section class="features-section" id="features">
  <div class="container">
    <div class="section-header">
      <h2>{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_subtitle }}</p>
    </div>

    <div class="features-grid">
      {% for block in section.blocks %}
        <div class="feature-card" {{ block.shopify_attributes }}>
          <div class="feature-icon">{{ block.settings.icon }}</div>
          <h3 class="feature-title">{{ block.settings.title }}</h3>
          <p class="feature-description">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.features-section {
  padding: 80px 20px;
  background: #1a1a1a;
}

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-header h2 {
    font-size: 2.5rem;
    color: white;
    margin-bottom: 15px;
    font-weight: 700;
  }

  .section-header p {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .feature-card {
    background: rgba(0, 255, 65, 0.03);
    border: 1px solid rgba(0, 255, 65, 0.2);
    border-radius: 20px;
    padding: 40px 30px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-10px);
    border-color: #00ff41;
    box-shadow: 0 15px 35px rgba(0, 255, 65, 0.2);
    background: rgba(0, 255, 65, 0.06);
  }

  .feature-icon {
    font-size: 3.5rem;
    margin-bottom: 20px;
    background: rgba(0, 255, 65, 0.1);
    width: 100px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    margin: 0 auto 25px;
    border: 2px solid rgba(0, 255, 65, 0.3);
  }

  .feature-title {
    font-size: 1.3rem;
    color: #00ff41;
    margin-bottom: 15px;
    font-weight: 700;
  }

  .feature-description {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    font-size: 1rem;
  }

  @media (max-width: 968px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .features-grid {
      grid-template-columns: 1fr;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .feature-icon {
      width: 80px;
      height: 80px;
      font-size: 2.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Features",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Everything You Need to Succeed"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Complete automated trading solution with strategies and support"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (emoji)",
          "default": "ðŸ“ˆ"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Feature description goes here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features",
      "blocks": [
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}