{% comment %}
  sections/features.liquid
  Features section with modern gradient icons
{% endcomment %}

<section class="features-section" id="features">
  <div class="container">
    <div class="section-header">
      <h2>{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_subtitle }}</p>
    </div>

    <div class="features-grid">
      {% for block in section.blocks %}
        <div class="feature-card" {{ block.shopify_attributes }}>
          <div class="feature-icon">
            {% if block.settings.title contains "Bot" and block.settings.title contains "Automated" or block.settings.title contains "Trading Bot" %}
              <!-- Bot Icon with gradient -->
              <svg viewBox="0 0 64 64" fill="none">
                <defs>
                  <linearGradient id="bot-grad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#00ff41;stop-opacity:1" />
                    <stop offset="100%" style="stop-color:#00cc33;stop-opacity:1" />
                  </linearGradient>
                </defs>
                <rect x="12" y="20" width="40" height="32" rx="4" fill="url(#bot-grad)" opacity="0.2"/>
                <rect x="12" y="20" width="40" height="32" rx="4" stroke="url(#bot-grad)" stroke-width="2" fill="none"/>
                <circle cx="24" cy="32" r="3" fill="url(#bot-grad)"/>
                <circle cx="40" cy="32" r="3" fill="url(#bot-grad)"/>
                <path d="M28 42 h8" stroke="url(#bot-grad)" stroke-width="2" stroke-linecap="round"/>
                <rect x="28" y="12" width="8" height="8" rx="4" fill="url(#bot-grad)"/>
                <line x1="32" y1="16" x2="32" y2="20" stroke="url(#bot-grad)" stroke-width="2"/>
              </svg>
            {% elsif block.settings.title contains "Indicator" or block.settings.title contains "TradingView" %}
              <!-- Chart Icon with gradient -->
              <svg viewBox="0 0 64 64" fill="none">
                <defs>
                  <linearGradient id="chart-grad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#00ff41;stop-opacity:1" />
                    <stop offset="100%" style="stop-color:#00dd3a;stop-opacity:1" />
                  </linearGradient>
                </defs>
                <rect x="12" y="36" width="8" height="16" rx="2" fill="url(#chart-grad)"/>
                <rect x="24" y="24" width="8" height="28" rx="2" fill="url(#chart-grad)"/>
                <rect x="36" y="16" width="8" height="36" rx="2" fill="url(#chart-grad)"/>
                <rect x="48" y="28" width="8" height="24" rx="2" fill="url(#chart-grad)"/>
              </svg>
            {% elsif block.settings.title contains "Strateg" %}
              <!-- Strategy/Growth Icon with gradient -->
              <svg viewBox="0 0 64 64" fill="none">
                <defs>
                  <linearGradient id="growth-grad" x1="0%" y1="100%" x2="100%" y2="0%">
                    <stop offset="0%" style="stop-color:#00cc33;stop-opacity:1" />
                    <stop offset="100%" style="stop-color:#00ff41;stop-opacity:1" />
                  </linearGradient>
                </defs>
                <path d="M12 48 L24 36 L32 42 L52 16" stroke="url(#growth-grad)" stroke-width="3" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
                <polyline points="42,16 52,16 52,26" stroke="url(#growth-grad)" stroke-width="3" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
                <circle cx="24" cy="36" r="3" fill="url(#growth-grad)"/>
                <circle cx="32" cy="42" r="3" fill="url(#growth-grad)"/>
                <circle cx="52" cy="16" r="3" fill="url(#growth-grad)"/>
              </svg>
            {% elsif block.settings.title contains "Discord" or block.settings.title contains "Community" %}
              <!-- Community Icon with gradient -->
              <svg viewBox="0 0 64 64" fill="none">
                <defs>
                  <linearGradient id="community-grad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#00ff41;stop-opacity:1" />
                    <stop offset="100%" style="stop-color:#00cc33;stop-opacity:1" />
                  </linearGradient>
                </defs>
                <circle cx="24" cy="22" r="8" fill="url(#community-grad)" opacity="0.3"/>
                <circle cx="24" cy="22" r="8" stroke="url(#community-grad)" stroke-width="2" fill="none"/>
                <path d="M12 48 C12 48 12 38 24 38 C36 38 36 48 36 48" stroke="url(#community-grad)" stroke-width="2" fill="none" stroke-linecap="round"/>
                <circle cx="44" cy="26" r="6" fill="url(#community-grad)" opacity="0.3"/>
                <circle cx="44" cy="26" r="6" stroke="url(#community-grad)" stroke-width="2" fill="none"/>
                <path d="M38 48 C38 48 38 40 44 40 C50 40 50 48 50 48" stroke="url(#community-grad)" stroke-width="2" fill="none" stroke-linecap="round"/>
              </svg>
            {% elsif block.settings.title contains "Configuration" or block.settings.title contains "Setup" %}
              <!-- Settings Icon with gradient -->
              <svg viewBox="0 0 64 64" fill="none">
                <defs>
                  <linearGradient id="settings-grad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#00ff41;stop-opacity:1" />
                    <stop offset="100%" style="stop-color:#00dd3a;stop-opacity:1" />
                  </linearGradient>
                </defs>
                <circle cx="32" cy="32" r="8" fill="url(#settings-grad)" opacity="0.3"/>
                <circle cx="32" cy="32" r="8" stroke="url(#settings-grad)" stroke-width="2" fill="none"/>
                <path d="M32 12 L32 20 M32 44 L32 52 M47.88 18.12 L42.24 23.76 M21.76 40.24 L16.12 45.88 M52 32 L44 32 M20 32 L12 32 M45.88 45.88 L40.24 40.24 M23.76 23.76 L18.12 18.12" stroke="url(#settings-grad)" stroke-width="2" stroke-linecap="round"/>
              </svg>
            {% elsif block.settings.title contains "Support" or block.settings.title contains "Priority" %}
              <!-- Support Icon with gradient -->
              <svg viewBox="0 0 64 64" fill="none">
                <defs>
                  <linearGradient id="support-grad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#ff4186;stop-opacity:1" />
                    <stop offset="100%" style="stop-color:#00ff41;stop-opacity:1" />
                  </linearGradient>
                </defs>
                <circle cx="32" cy="32" r="20" fill="url(#support-grad)" opacity="0.2"/>
                <circle cx="32" cy="32" r="20" stroke="url(#support-grad)" stroke-width="2" fill="none"/>
                <circle cx="32" cy="32" r="12" fill="url(#support-grad)" opacity="0.3"/>
                <circle cx="32" cy="32" r="6" fill="url(#support-grad)"/>
                <path d="M32 12 L32 18 M32 46 L32 52 M12 32 L18 32 M46 32 L52 32" stroke="url(#support-grad)" stroke-width="2" stroke-linecap="round"/>
              </svg>
            {% else %}
              <!-- Default Icon -->
              <svg viewBox="0 0 64 64" fill="none">
                <defs>
                  <linearGradient id="default-grad" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#00ff41;stop-opacity:1" />
                    <stop offset="100%" style="stop-color:#00cc33;stop-opacity:1" />
                  </linearGradient>
                </defs>
                <circle cx="32" cy="32" r="20" stroke="url(#default-grad)" stroke-width="2" fill="none"/>
                <path d="M32 22 L32 32 L38 36" stroke="url(#default-grad)" stroke-width="2" stroke-linecap="round"/>
              </svg>
            {% endif %}
          </div>
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .features-section {
    padding: 80px 20px;
    background: #0A0A0A;
    border-top: 1px solid rgba(0, 255, 65, 0.2);
    border-bottom: 1px solid rgba(0, 255, 65, 0.2);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
  }

  .feature-card {
    background: rgba(0, 255, 65, 0.03);
    border: 1px solid rgba(0, 255, 65, 0.2);
    border-radius: 20px;
    padding: 40px 30px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-8px);
    border-color: rgba(0, 255, 65, 0.5);
    background: rgba(0, 255, 65, 0.05);
    box-shadow: 0 15px 40px rgba(0, 255, 65, 0.25);
  }

  .feature-icon {
    width: 100px;
    height: 100px;
    margin: 0 auto 25px;
    background: radial-gradient(circle, rgba(0, 255, 65, 0.1) 0%, transparent 70%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s ease;
    position: relative;
  }

  .feature-card:hover .feature-icon {
    transform: scale(1.1) rotate(5deg);
    background: radial-gradient(circle, rgba(0, 255, 65, 0.2) 0%, transparent 70%);
  }

  .feature-icon svg {
    width: 64px;
    height: 64px;
    filter: drop-shadow(0 4px 8px rgba(0, 255, 65, 0.3));
    transition: all 0.4s ease;
  }

  .feature-card:hover .feature-icon svg {
    filter: drop-shadow(0 8px 16px rgba(0, 255, 65, 0.5));
  }

  .feature-card h3 {
    color: white;
    font-size: 1.4rem;
    font-weight: 700;
    margin-bottom: 15px;
  }

  .feature-card p {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
    font-size: 1rem;
  }

  @media (max-width: 968px) {
    .features-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }

    .feature-card {
      padding: 30px 20px;
    }

    .feature-icon {
      width: 80px;
      height: 80px;
    }

    .feature-icon svg {
      width: 48px;
      height: 48px;
    }
  }

  @media (max-width: 640px) {
    .features-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Features",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Everything You Need to Succeed"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Complete automated trading solution with strategies and support"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Feature Description",
          "default": "Feature description goes here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features"
    }
  ]
}
{% endschema %}