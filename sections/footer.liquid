<style>
  .footer {
    background: linear-gradient(135deg, #0a0a0a 0%, #0d1b0d 100%);
    padding: 60px 20px 30px;
    border-top: 1px solid rgba(0, 255, 65, 0.2);
  }

  .footer .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1.5fr 2fr;
    gap: 60px;
    margin-bottom: 40px;
  }

  .footer-brand .logo {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 15px;
  }

  .footer-brand .logo-icon img {
    width: 40px;
    height: 40px;
    border-radius: 8px;
  }

  .footer-brand .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: #00ff41;
  }

  .footer-brand .tagline {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1rem;
    line-height: 1.6;
    max-width: 350px;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }

  .footer-column h4 {
    color: white;
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 20px;
  }

  .footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-column ul li {
    margin-bottom: 12px;
  }

  .footer-column ul li a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .footer-column ul li a:hover {
    color: #00ff41;
  }

  .social-links li a svg {
    flex-shrink: 0;
  }

  .footer-disclaimer {
    background: rgba(255, 65, 65, 0.05);
    border: 1px solid rgba(255, 65, 65, 0.3);
    border-radius: 12px;
    padding: 20px 25px;
    margin-bottom: 30px;
  }

  .footer-disclaimer p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.85rem;
    line-height: 1.6;
    margin: 0;
  }

  .footer-disclaimer strong {
    color: #ff6b6b;
    font-weight: 700;
  }

  .footer-bottom {
    text-align: center;
    padding-top: 30px;
    border-top: 1px solid rgba(0, 255, 65, 0.1);
  }

  .footer-bottom p {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.9rem;
    margin: 0;
  }

  @media (max-width: 968px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .footer-links {
      grid-template-columns: 1fr;
      gap: 30px;
    }
  }

  @media (max-width: 640px) {
    .footer {
      padding: 40px 20px 20px;
    }

    .footer-brand .logo-text {
      font-size: 1.3rem;
    }

    .footer-disclaimer {
      padding: 15px 20px;
    }
  }
</style>

