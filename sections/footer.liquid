<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <div class="logo">
          <span class="logo-icon">
            <img src="{{ 'logo.jpg' | asset_url }}" alt="{{ shop.name }}">
          </span>
          <span class="logo-text">{{ section.settings.company_name }}</span>
        </div>
        <p>{{ section.settings.tagline }}</p>
      </div>
      <div class="footer-links">
        {% for block in section.blocks %}
          <div class="footer-column">
            <h4>{{ block.settings.heading }}</h4>
            <ul>
              {% assign links = block.settings.links | newline_to_br | split: '<br />' %}
              {% for link in links %}
                {% if link != blank %}
                  <li>{{ link }}</li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "company_name",
      "label": "Company Name",
      "default": "Market Sniper"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Precision trading tools for professional traders"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Footer Column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Column Heading",
          "default": "Links"
        },
        {
          "type": "textarea",
          "id": "links",
          "label": "Links (HTML, one per line)"
        }
      ]
    }
  ]
}
{% endschema %}