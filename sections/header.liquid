{% comment %}
  sections/header.liquid
  Site header with navigation
{% endcomment %}

<nav class="navbar">
  <div class="container">
    <a href="/" class="logo">
      <span class="logo-icon">
        <img src="{{ 'logo.jpg' | asset_url }}" alt="{{ shop.name }}">
      </span>
      <span class="logo-text">{{ section.settings.logo_text | default: shop.name }}</span>
    </a>
    
    <ul class="nav-links">
      <li><a href="#features">Features</a></li>
      <li><a href="#pricing">Plans</a></li>
      <li><a href="#faq">FAQ</a></li>
      
      <!-- Login/Account Icon -->
      {% if customer %}
        <li>
          <a href="/account" class="account-icon" title="My Account">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            <span class="account-name">{{ customer.first_name | default: "Account" }}</span>
          </a>
        </li>
      {% else %}
        <li>
          <a href="/account/login" class="login-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            Login
          </a>
        </li>
      {% endif %}
    </ul>
    
    <button class="mobile-menu-btn">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</nav>

<style>
  .site-header {
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 255, 65, 0.2);
    position: sticky;
    top: 0;
    z-index: 1000;
    padding: 15px 0;
    transition: background 0.3s ease, border-color 0.3s ease;
  }

  .site-header.scrolled,
  .navbar.scrolled {
    background: rgba(10, 10, 10, 0.95);
    border-bottom: 1px solid rgba(0, 255, 65, 0.2);
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    font-size: 1.3rem;
    font-weight: 700;
    color: white;
    transition: opacity 0.3s ease;
  }

  .logo:hover {
    opacity: 0.8;
  }

  .logo-image {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
  }

  .logo-text {
    color: #00ff41;
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: 30px;
  }

  .nav-link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-link:hover {
    color: #00ff41;
  }

  .cart-link {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .cart-count {
    background: #00ff41;
    color: #000;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.85rem;
    font-weight: 700;
    min-width: 20px;
    text-align: center;
  }

  .nav-cta {
    background: linear-gradient(135deg, #00ff41, #00cc33);
    color: #000;
    padding: 10px 25px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 700;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 255, 65, 0.3);
  }

  .nav-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 255, 65, 0.5);
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
  }

  .mobile-menu-toggle span {
    width: 25px;
    height: 3px;
    background: #00ff41;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .account-icon {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .account-name {
    font-size: 14px;
  }
  
  .login-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border-radius: 8px;
    transition: all 0.3s ease;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .login-btn:hover {
    background: rgba(0, 255, 65, 0.1);
    color: #00ff41;
  }

  @media (max-width: 768px) {
    .mobile-menu-toggle {
      display: flex;
    }

    .main-nav {
      display: none;
    }
  }
</style>

<script>
  // Add scroll effect to navbar
  window.addEventListener('scroll', function() {
    const navbar = document.querySelector('.navbar');
    if (navbar) {
      if (window.scrollY > 50) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
    }
  });
</script>

