{% comment %}
  sections/header.liquid
  Site header with navigation and mobile menu
{% endcomment %}

<nav class="navbar">
  <div class="container">
    <a href="/" class="logo">
      <span class="logo-icon">
        <img src="{{ 'logo.jpg' | asset_url }}" alt="{{ shop.name }}">
      </span>
      <span class="logo-text">{{ section.settings.logo_text | default: shop.name }}</span>
    </a>
    
    <ul class="nav-links">
      <li><a href="/#features">Features</a></li>
      <li><a href="/#pricing">Plans</a></li>
      <li><a href="/#faq">FAQ</a></li>
      
      <!-- Login/Account Icon -->
      {% if customer %}
        <li>
          <a href="/account" class="account-icon" title="My Account">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            <span class="account-name">{{ customer.first_name | default: "Account" }}</span>
          </a>
        </li>
      {% else %}
        <li>
          <a href="/account/login" class="login-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            Login
          </a>
        </li>
      {% endif %}
    </ul>
    
    <button class="mobile-menu-btn" aria-label="Toggle mobile menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</nav>

<!-- Mobile Menu Overlay - OUTSIDE navbar -->
<div class="mobile-menu-overlay"></div>

<!-- Mobile Menu - OUTSIDE navbar -->
<div class="mobile-menu">
  <ul class="mobile-nav-links">
    <li><a href="/#features">Features</a></li>
    <li><a href="/#pricing">Plans</a></li>
    <li><a href="/#faq">FAQ</a></li>
    
    {% if customer %}
      <li>
        <a href="/account" class="mobile-account">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          {{ customer.first_name | default: "My Account" }}
        </a>
      </li>
      <li>
        <a href="/account/logout" class="mobile-logout">Logout</a>
      </li>
    {% else %}
      <li>
        <a href="/account/login" class="mobile-login">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          Login
        </a>
      </li>
    {% endif %}
  </ul>
</div>

<style>
  /* Reset any parent stacking contexts */
  body,
  html,
  #shopify-section-header {
    position: relative;
    z-index: auto;
  }

  /* CRITICAL: Override layout.css navbar z-index */
  .navbar {
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 255, 65, 0.2);
    position: sticky;
    top: 0;
    z-index: 1000;
    padding: 15px 0;
  }

  .navbar .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    font-size: 1.3rem;
    font-weight: 700;
    color: white;
    transition: opacity 0.3s ease;
  }

  .logo:hover {
    opacity: 0.8;
  }

  .logo-icon img {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    object-fit: cover;
  }

  .logo-text {
    color: #00ff41;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 30px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links li {
    margin: 0;
  }

  .nav-links a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.3s ease;
  }

  .nav-links a:hover {
    color: #00ff41;
  }

  .account-icon {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .account-name {
    font-size: 14px;
  }
  
  .login-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border-radius: 8px;
    transition: all 0.3s ease;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .login-btn:hover {
    background: rgba(0, 255, 65, 0.1);
    color: #00ff41;
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    position: relative;
    z-index: 10001;
  }

  .mobile-menu-btn span {
    width: 25px;
    height: 3px;
    background: #00ff41;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .mobile-menu-btn.active span:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
  }

  .mobile-menu-btn.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-btn.active span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  /* Mobile Menu Overlay - MAXIMUM z-index */
  .mobile-menu-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    z-index: 999998;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .mobile-menu-overlay.active {
    display: block;
    opacity: 1;
  }

  /* Mobile Menu - MAXIMUM z-index */
  .mobile-menu {
    position: fixed;
    top: 0;
    right: -100%;
    width: 280px;
    height: 100%;
    background: linear-gradient(135deg, #0a0a0a 0%, #0d1b0d 100%);
    border-left: 1px solid rgba(0, 255, 65, 0.2);
    z-index: 999999;
    padding: 80px 30px 30px;
    transition: right 0.3s ease;
    overflow-y: auto;
  }

  .mobile-menu.active {
    right: 0;
  }

  .mobile-nav-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .mobile-nav-links li {
    margin-bottom: 20px;
  }

  .mobile-nav-links a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 1.2rem;
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 0;
    transition: all 0.3s ease;
    border-bottom: 1px solid rgba(0, 255, 65, 0.1);
  }

  .mobile-nav-links a:hover {
    color: #00ff41;
    padding-left: 10px;
  }

  .mobile-account,
  .mobile-login {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .mobile-logout {
    color: #ff4141 !important;
  }

  .mobile-logout:hover {
    color: #ff6b6b !important;
  }

  @media (max-width: 968px) {
    .nav-links {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }
  }

  @media (max-width: 640px) {
    .mobile-menu {
      width: 100%;
    }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
  const mobileMenu = document.querySelector('.mobile-menu');
  const mobileMenuOverlay = document.querySelector('.mobile-menu-overlay');
  const mobileNavLinks = document.querySelectorAll('.mobile-nav-links a');

  // Toggle mobile menu
  function toggleMobileMenu() {
    const isActive = mobileMenu.classList.contains('active');
    
    if (isActive) {
      // Close menu
      mobileMenuBtn.classList.remove('active');
      mobileMenu.classList.remove('active');
      mobileMenuOverlay.classList.remove('active');
      document.body.style.overflow = '';
    } else {
      // Open menu
      mobileMenuBtn.classList.add('active');
      mobileMenu.classList.add('active');
      mobileMenuOverlay.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
  }

  // Close mobile menu
  function closeMobileMenu() {
    mobileMenuBtn.classList.remove('active');
    mobileMenu.classList.remove('active');
    mobileMenuOverlay.classList.remove('active');
    document.body.style.overflow = '';
  }

  // Button click - toggle
  if (mobileMenuBtn) {
    mobileMenuBtn.addEventListener('click', function(e) {
      e.preventDefault();
      toggleMobileMenu();
    });
  }

  // Close menu when overlay clicked
  if (mobileMenuOverlay) {
    mobileMenuOverlay.addEventListener('click', closeMobileMenu);
  }

  // Close menu when nav link clicked
  mobileNavLinks.forEach(link => {
    link.addEventListener('click', function() {
      closeMobileMenu();
    });
  });

  // Close menu on escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && mobileMenu.classList.contains('active')) {
      closeMobileMenu();
    }
  });
});
</script>

