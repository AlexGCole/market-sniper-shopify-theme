{% comment %}
  sections/header.liquid
  Site header with navigation
{% endcomment %}

<nav class="navbar">
  <div class="container">
    <a href="/" class="logo">
      <span class="logo-icon">
        <img src="{{ 'logo.jpg' | asset_url }}" alt="{{ shop.name }}">
      </span>
      <span class="logo-text">{{ section.settings.logo_text | default: shop.name }}</span>
    </a>
    
    <ul class="nav-links">
      <li><a href="#features">Features</a></li>
      <li><a href="#bot-suite">Bot Suite</a></li>
      <li><a href="#pricing">Pricing</a></li>
      <li><a href="#faq">FAQ</a></li>
      
      <!-- Login/Account Icon -->
      {% if customer %}
        <li>
          <a href="/account" class="account-icon" title="My Account">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            <span class="account-name">{{ customer.first_name | default: "Account" }}</span>
          </a>
        </li>
      {% else %}
        <li>
          <a href="/account/login" class="login-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            Login
          </a>
        </li>
      {% endif %}
    </ul>
    
    <button class="mobile-menu-btn">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</nav>

<style>
  .site-header {
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 255, 65, 0.2);
    position: relative;
    z-index: 1000;
    padding: 15px 0;
    transition: background 0.3s ease, border-color 0.3s ease;
  }

  .site-header.scrolled {
    background: rgba(0, 255, 65, 0.15);
    border-bottom: 1px solid rgba(0, 255, 65, 0.3);
  }

  .navbar {
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 255, 65, 0.2);
    position: sticky;
    top: 0;
    z-index: 1000;
    padding: 15px 0;
    transition: background 0.3s ease, border-color 0.3s ease;
  }

  .navbar.on-green {
    background: rgba(10, 10, 10, 0.95);
    border-bottom: 1px solid rgba(0, 255, 65, 0.2);
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    font-size: 1.3rem;
    font-weight: 700;
    color: white;
    transition: opacity 0.3s ease;
  }

  .logo:hover {
    opacity: 0.8;
  }

  .logo-icon img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
  }

  .logo-image {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
  }

  .logo-text {
    color: #00ff41;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 30px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-links a:hover {
    color: #00ff41;
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: 30px;
  }

  .nav-link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-link:hover {
    color: #00ff41;
  }

  .cart-link {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .cart-count {
    background: #00ff41;
    color: #000;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.85rem;
    font-weight: 700;
    min-width: 20px;
    text-align: center;
  }

  .nav-cta {
    background: linear-gradient(135deg, #00ff41, #00cc33);
    color: #000;
    padding: 10px 25px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 700;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 255, 65, 0.3);
  }

  .nav-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 255, 65, 0.5);
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
  }

  .mobile-menu-toggle span {
    width: 25px;
    height: 3px;
    background: #00ff41;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
  }

  .mobile-menu-btn span {
    width: 25px;
    height: 3px;
    background: #00ff41;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .account-icon {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .account-name {
    font-size: 14px;
  }
  
  .login-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border-radius: 8px;
    transition: all 0.3s ease;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .login-btn:hover {
    background: rgba(0, 255, 65, 0.1);
    color: #00ff41;
  }

  /* Add scroll offset for sections */
  section,
  [id] {
    scroll-margin-top: 80px;
  }

  @media (max-width: 768px) {
    .mobile-menu-toggle {
      display: flex;
    }

    .mobile-menu-btn {
      display: flex;
    }

    .main-nav {
      display: none;
    }

    .nav-links {
      display: none;
    }
  }
</style>

<script>
  // Smooth scroll with offset
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const targetId = this.getAttribute('href');
      if (targetId === '#') return;
      
      const targetElement = document.querySelector(targetId);
      if (targetElement) {
        const navbarHeight = 80;
        const targetPosition = targetElement.getBoundingClientRect().top + window.pageYOffset - navbarHeight;
        
        window.scrollTo({
          top: targetPosition,
          behavior: 'smooth'
        });
      }
    });
  });

  // Change navbar to counter background as you scroll
  function updateNavbar() {
    const navbar = document.querySelector('.navbar');
    if (!navbar) return;
    
    // Check what's behind the navbar
    const navbarRect = navbar.getBoundingClientRect();
    const checkPoint = navbarRect.bottom + 50; // Check a bit below navbar
    const elementBehind = document.elementFromPoint(window.innerWidth / 2, checkPoint);
    
    if (elementBehind) {
      const bgColor = window.getComputedStyle(elementBehind).backgroundColor;
      
      if (bgColor.includes('rgb')) {
        const rgb = bgColor.match(/\d+/g);
        if (rgb && rgb.length >= 3) {
          const r = parseInt(rgb[0]);
          const g = parseInt(rgb[1]);
          const b = parseInt(rgb[2]);
          
          // If background is greenish, make navbar black
          if (g > r + 30 && g > b + 30) {
            navbar.classList.add('on-green');
          } else {
            navbar.classList.remove('on-green');
          }
        }
      }
    }
  }

  window.addEventListener('scroll', updateNavbar);
  window.addEventListener('load', updateNavbar);
  updateNavbar();
</script>

