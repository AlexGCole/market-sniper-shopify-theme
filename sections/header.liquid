{% comment %}
  sections/header.liquid
  Site header with navigation
{% endcomment %}

<nav class="navbar">
  <div class="container">
    <a href="/" class="logo">
      <span class="logo-icon">
        <img src="{{ 'logo.jpg' | asset_url }}" alt="{{ shop.name }}">
      </span>
      <span class="logo-text">{{ section.settings.logo_text | default: shop.name }}</span>
    </a>
    
    <ul class="nav-links">
      <li><a href="#features">Features</a></li>
      <li><a href="#bot-suite">Bot Suite</a></li>
      <li><a href="#pricing">Pricing</a></li>
      <li><a href="#faq">FAQ</a></li>
      
      <!-- Login/Account Icon -->
      {% if customer %}
        <li>
          <a href="/account" class="account-icon" title="My Account">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            <span class="account-name">{{ customer.first_name | default: "Account" }}</span>
          </a>
        </li>
      {% else %}
        <li>
          <a href="/account/login" class="login-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            Login
          </a>
        </li>
      {% endif %}
    </ul>
    
    <button class="mobile-menu-btn">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</nav>

<style>
  .site-header {
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 255, 65, 0.2);
    position: relative;
    z-index: 1000;
    padding: 15px 0;
    transition: background 0.3s ease, border-color 0.3s ease;
  }

  .navbar {
    background: rgba(0, 255, 65, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 255, 65, 0.3);
    position: sticky;
    top: 0;
    z-index: 1000;
    padding: 15px 0;
    transition: background 0.3s ease, border-color 0.3s ease;
  }

  .navbar.on-green-bg {
    background: rgba(10, 10, 10, 0.95);
    border-bottom: 1px solid rgba(0, 255, 65, 0.2);
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    font-size: 1.3rem;
    font-weight: 700;
    color: white;
    transition: opacity 0.3s ease;
  }

  .logo:hover {
    opacity: 0.8;
  }

  .logo-icon img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
  }

  .logo-image {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
  }

  .logo-text {
    color: #00ff41;
  }

  .navbar.on-green-bg .logo-text {
    color: #00ff41;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 30px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: rgba(0, 0, 0, 0.8);
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.3s ease;
    position: relative;
  }

  .navbar.on-green-bg .nav-links a {
    color: rgba(255, 255, 255, 0.8);
  }

  .nav-links a:hover {
    color: #000;
  }

  .navbar.on-green-bg .nav-links a:hover {
    color: #00ff41;
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: 30px;
  }

  .nav-link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-link:hover {
    color: #00ff41;
  }

  .cart-link {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .cart-count {
    background: #00ff41;
    color: #000;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.85rem;
    font-weight: 700;
    min-width: 20px;
    text-align: center;
  }

  .nav-cta {
    background: linear-gradient(135deg, #00ff41, #00cc33);
    color: #000;
    padding: 10px 25px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 700;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 255, 65, 0.3);
  }

  .nav-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 255, 65, 0.5);
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
  }

  .mobile-menu-toggle span {
    width: 25px;
    height: 3px;
    background: #00ff41;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
  }

  .mobile-menu-btn span {
    width: 25px;
    height: 3px;
    background: #000;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .navbar.on-green-bg .mobile-menu-btn span {
    background: #00ff41;
  }

  .account-icon {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .account-name {
    font-size: 14px;
  }
  
  .login-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border-radius: 8px;
    transition: all 0.3s ease;
  }
  
  .login-btn:hover {
    background: rgba(0, 255, 65, 0.1);
  }

  /* Scroll offset for anchor links */
  section {
    scroll-margin-top: 80px;
  }

  @media (max-width: 768px) {
    .mobile-menu-toggle {
      display: flex;
    }

    .mobile-menu-btn {
      display: flex;
    }

    .main-nav {
      display: none;
    }

    .nav-links {
      display: none;
    }
  }
</style>

<script>
  // Smooth scroll with offset for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const targetId = this.getAttribute('href');
      if (targetId === '#') return;
      
      const targetElement = document.querySelector(targetId);
      if (targetElement) {
        const navbarHeight = document.querySelector('.navbar').offsetHeight;
        const targetPosition = targetElement.offsetTop - navbarHeight;
        
        window.scrollTo({
          top: targetPosition,
          behavior: 'smooth'
        });
      }
    });
  });

  // Change navbar style based on section background
  function updateNavbarStyle() {
    const navbar = document.querySelector('.navbar');
    const scrollPosition = window.scrollY + navbar.offsetHeight + 50;
    
    // Get all sections
    const sections = document.querySelectorAll('section, [id]');
    let isOnGreenBackground = false;
    
    sections.forEach(section => {
      const sectionTop = section.offsetTop;
      const sectionBottom = sectionTop + section.offsetHeight;
      
      // Check if current scroll position is within this section
      if (scrollPosition >= sectionTop && scrollPosition <= sectionBottom) {
        const bgColor = window.getComputedStyle(section).backgroundColor;
        const rgb = bgColor.match(/\d+/g);
        
        // Check if background is greenish (more green than other colors)
        if (rgb && parseInt(rgb[1]) > parseInt(rgb[0]) && parseInt(rgb[1]) > parseInt(rgb[2])) {
          isOnGreenBackground = true;
        }
      }
    });
    
    if (isOnGreenBackground) {
      navbar.classList.add('on-green-bg');
    } else {
      navbar.classList.remove('on-green-bg');
    }
  }
  
  // Run on scroll and on load
  window.addEventListener('scroll', updateNavbarStyle);
  window.addEventListener('load', updateNavbarStyle);
  updateNavbarStyle();
</script>

