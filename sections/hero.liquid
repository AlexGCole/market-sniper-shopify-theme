<section class="hero">
  <div class="container">
    <div class="hero-content">
      {% if section.settings.show_badge and section.settings.badge_text != blank %}
        <span class="hero-badge">{{ section.settings.badge_text }}</span>
      {% endif %}
      
      <h1 class="hero-title animate-hero-element">
        {{ section.settings.hero_title_line1 }}<br>
        <span class="gradient-text">{{ section.settings.hero_title_line2 }}</span>
      </h1>
      
      <p class="hero-subtitle animate-hero-element">{{ section.settings.hero_subtitle }}</p>
      
      <div class="hero-cta animate-hero-element">
        {% if section.settings.primary_button_text != blank %}
          <a href="{{ section.settings.primary_button_link }}" class="btn btn-primary">
            {{ section.settings.primary_button_text }}
          </a>
        {% endif %}
        {% if section.settings.secondary_button_text != blank %}
          <a href="{{ section.settings.secondary_button_link }}" class="btn btn-secondary">
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>
      
      {% if section.settings.show_stats %}
        <div class="hero-stats animate-hero-element">
          {% for block in section.blocks %}
            <div class="stat">
              <div class="stat-number">{{ block.settings.stat_number }}</div>
              <div class="stat-label">{{ block.settings.stat_label }}</div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
  <div class="hero-bg"></div>
</section>

<style>
  /* Hero animation styles */
  .animate-hero-element {
    opacity: 0;
    transform: translateX(-50px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .animate-hero-element.visible {
    opacity: 1;
    transform: translateX(0);
  }

  .animate-hero-element.no-transition {
    transition: none !important;
  }

  .animate-hero-element:nth-of-type(1) { transition-delay: 0.1s; }
  .animate-hero-element:nth-of-type(2) { transition-delay: 0.3s; }
  .animate-hero-element:nth-of-type(3) { transition-delay: 0.5s; }
  .animate-hero-element:nth-of-type(4) { transition-delay: 0.7s; }
</style>

<script>
  // Hero animation on scroll
  (function() {
    function initHeroAnimations() {
      const heroElements = document.querySelectorAll('.animate-hero-element');
      
      if (heroElements.length === 0) return;
      
      // Check if elements are initially in view and set to final state immediately
      heroElements.forEach(el => {
        const rect = el.getBoundingClientRect();
        if (rect.top < window.innerHeight && rect.bottom > 0) {
          // Set final state directly to prevent any animation
          el.style.opacity = '1';
          el.style.transform = 'translateX(0)';
          el.classList.add('visible');
          el.classList.add('no-transition');
        }
      });
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          } else {
            entry.target.classList.remove('visible');
            // Remove inline styles and no-transition when scrolling out
            if (entry.target.classList.contains('no-transition')) {
              entry.target.classList.remove('no-transition');
              entry.target.style.opacity = '';
              entry.target.style.transform = '';
            }
          }
        });
      }, {
        threshold: 0.1,
        rootMargin: '0px'
      });
      
      heroElements.forEach(el => observer.observe(el));
    }
    
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initHeroAnimations);
    } else {
      initHeroAnimations();
    }
  })();
</script>

