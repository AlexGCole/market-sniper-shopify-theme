{% comment %}
  sections/how-it-works.liquid
  Step-by-step process section
{% endcomment %}

<section class="how-it-works" id="how-it-works">
  <div class="container">
    <div class="section-header">
      <h2>{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_subtitle }}</p>
    </div>

    <div class="steps-grid">
      {% for block in section.blocks %}
        <div class="step-card" {{ block.shopify_attributes }}>
          <div class="step-icon">{{ block.settings.icon }}</div>
          <h3 class="step-title">{{ block.settings.title }}</h3>
          <p class="step-description">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .how-it-works {
    padding: 80px 20px;
    background: #050807;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-header h2 {
    font-size: 2.5rem;
    color: white;
    margin-bottom: 15px;
    font-weight: 700;
  }

  .section-header p {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
  }

  .step-card {
    background: rgba(0, 255, 65, 0.03);
    border: 1px solid rgba(0, 255, 65, 0.2);
    border-radius: 20px;
    padding: 40px 25px;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
    z-index: 1;
  }

  .step-card:hover {
    transform: translateY(-10px);
    border-color: #00ff41;
    box-shadow: 0 15px 35px rgba(0, 255, 65, 0.2);
    background: rgba(0, 255, 65, 0.06);
  }

  .step-icon {
    font-size: 4rem;
    margin-bottom: 20px;
    background: rgba(0, 255, 65, 0.1);
    width: 120px;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    margin: 0 auto 25px;
    border: 2px solid rgba(0, 255, 65, 0.3);
  }

  .step-title {
    font-size: 1.4rem;
    color: #00ff41;
    margin-bottom: 15px;
    font-weight: 700;
  }

  .step-description {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    font-size: 1rem;
  }

  @media (max-width: 1200px) {
    .steps-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .steps-grid {
      grid-template-columns: 1fr;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .step-icon {
      width: 100px;
      height: 100px;
      font-size: 3rem;
    }
  }
</style>

{% schema %}
{
  "name": "How It Works",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Your Path to Trading Success"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Get started in minutes with our proven 4-step system"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (emoji)",
          "default": "ðŸ“Š"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Step Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Step description goes here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "How It Works",
      "blocks": [
        {
          "type": "step"
        }
      ]
    }
  ]
}
{% endschema %}