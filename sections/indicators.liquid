{% comment %}
  sections/indicators.liquid
  Indicators showcase section with icon-based cards
{% endcomment %}

<section class="indicators" id="indicators">
  <div class="container">
    <div class="section-header">
      <h2>{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_subtitle }}</p>
    </div>

    <div class="indicators-grid">
      {% for block in section.blocks %}
        <div class="indicator-card" {{ block.shopify_attributes }}>
          <div class="indicator-icon">
            {% if block.settings.icon_type == 'bell' %}
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                <circle cx="12" cy="8" r="1" fill="currentColor"></circle>
              </svg>
            {% elsif block.settings.icon_type == 'chart' %}
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round">
                <line x1="18" y1="20" x2="18" y2="8"></line>
                <line x1="12" y1="20" x2="12" y2="4"></line>
                <line x1="6" y1="20" x2="6" y2="12"></line>
              </svg>
            {% elsif block.settings.icon_type == 'trend' %}
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="22 7 13.5 15.5 8.5 10.5 2 17"></polyline>
                <polyline points="16 7 22 7 22 13"></polyline>
              </svg>
            {% elsif block.settings.icon_type == 'target' %}
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <circle cx="12" cy="12" r="6"></circle>
                <circle cx="12" cy="12" r="2" fill="currentColor"></circle>
              </svg>
            {% endif %}
          </div>
          
          <div class="indicator-content">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .indicators {
    padding: 100px 20px;
    background: #000;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-header h2 {
    font-size: clamp(2rem, 5vw, 3.5rem);
    color: white;
    margin-bottom: 20px;
    font-weight: 700;
    line-height: 1.2;
  }

  .section-header p {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
    max-width: 700px;
    margin: 0 auto;
  }

  .indicators-grid {
    display: flex;
    flex-direction: column;
    gap: 24px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .indicator-card {
    background: linear-gradient(135deg, rgba(0, 255, 65, 0.03) 0%, rgba(0, 255, 65, 0.01) 100%);
    border: 1px solid rgba(0, 255, 65, 0.15);
    border-radius: 20px;
    padding: 40px 50px;
    display: flex;
    align-items: center;
    gap: 30px;
    transition: all 0.3s ease;
  }

  .indicator-card:hover {
    border-color: rgba(0, 255, 65, 0.3);
    background: linear-gradient(135deg, rgba(0, 255, 65, 0.05) 0%, rgba(0, 255, 65, 0.02) 100%);
    transform: translateY(-2px);
  }

  .indicator-icon {
    width: 70px;
    height: 70px;
    min-width: 70px;
    background: rgba(0, 255, 65, 0.1);
    border: 2px solid rgba(0, 255, 65, 0.3);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .indicator-icon svg {
    width: 32px;
    height: 32px;
    color: #00ff41;
  }

  .indicator-content {
    flex: 1;
  }

  .indicator-content h3 {
    font-size: 1.5rem;
    color: white;
    margin-bottom: 8px;
    font-weight: 600;
  }

  .indicator-content p {
    font-size: 1.05rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 768px) {
    .indicators {
      padding: 60px 15px;
    }

    .section-header {
      margin-bottom: 50px;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .section-header p {
      font-size: 1.05rem;
    }

    .indicator-card {
      padding: 30px 25px;
      gap: 20px;
    }

    .indicator-icon {
      width: 60px;
      height: 60px;
      min-width: 60px;
    }

    .indicator-icon svg {
      width: 28px;
      height: 28px;
    }

    .indicator-content h3 {
      font-size: 1.25rem;
    }

    .indicator-content p {
      font-size: 0.95rem;
    }
  }

  @media (max-width: 480px) {
    .indicators {
      padding: 50px 15px;
    }

    .section-header {
      margin-bottom: 40px;
    }

    .indicator-card {
      padding: 25px 20px;
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }

    .indicator-icon {
      width: 56px;
      height: 56px;
      min-width: 56px;
    }

    .indicator-icon svg {
      width: 26px;
      height: 26px;
    }

    .indicator-content h3 {
      font-size: 1.15rem;
    }
  }
</style>

{% schema %}
{
  "name": "Indicators",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Professional Indicators & Trading Strategies"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Everything you need for successful trading in one complete package"
    }
  ],
  "blocks": [
    {
      "type": "indicator",
      "name": "Indicator Card",
      "settings": [
        {
          "type": "select",
          "id": "icon_type",
          "label": "Icon Type",
          "options": [
            {
              "value": "bell",
              "label": "Bell (Alerts)"
            },
            {
              "value": "chart",
              "label": "Chart (Candles)"
            },
            {
              "value": "trend",
              "label": "Trend (RSI)"
            },
            {
              "value": "target",
              "label": "Target (Strategies)"
            }
          ],
          "default": "chart"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Sharp Shooter Candles 4.2"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Advanced candlestick indicator with buy/sell signals, MACD integration, and reversal detection."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Indicators"
    }
  ]
}
{% endschema %}
