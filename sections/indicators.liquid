{% comment %}
  sections/indicators.liquid
  Indicators showcase section with images - UPDATED with fixed bullets
{% endcomment %}

<section class="indicators" id="indicators">
  <div class="container">
    <div class="section-header">
      <h2>{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_subtitle }}</p>
    </div>

    <div class="indicators-grid">
      {% for block in section.blocks %}
        <div class="indicator-item {% cycle 'normal', 'reverse' %}" {{ block.shopify_attributes }}>
          <div class="indicator-content">
            <span class="indicator-badge">{{ block.settings.version }}</span>
            <h3>{{ block.settings.title }}</h3>
            <p class="indicator-description">{{ block.settings.description }}</p>
            
            {% if block.settings.features != blank %}
              <ul class="indicator-features">
                {% assign features_list = block.settings.features | split: '
' %}
                {% for feature in features_list %}
                  {% if feature != blank %}
                    <li>{{ feature | strip }}</li>
                  {% endif %}
                {% endfor %}
              </ul>
            {% endif %}
          </div>

          <div class="indicator-visual">
            <div class="indicator-visual-container">
              {% if block.settings.image %}
                {{ block.settings.image | image_url: width: 800 | image_tag }}
              {% elsif block.settings.fallback_image != blank %}
                <img 
                  src="{{ block.settings.fallback_image | asset_url }}" 
                  alt="{{ block.settings.title }}"
                >
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>



<style>
  .indicators {
    padding: 80px 20px;
    background: rgba(10, 10, 10, 0.5);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 60px;
  }

  .section-header h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 16px;
    color: white;
  }

  .section-header p {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .indicators-grid {
    display: flex;
    flex-direction: column;
    gap: 60px;
  }

  .indicator-item {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .indicator-item.reverse {
    direction: rtl;
  }

  .indicator-item.reverse > * {
    direction: ltr;
  }

  .indicator-badge {
    display: inline-block;
    padding: 8px 20px;
    background: rgba(0, 255, 65, 0.2);
    color: #00ff41;
    border-radius: 30px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .indicator-content h3 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: 16px;
    color: white;
  }

  .indicator-description {
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 24px;
    line-height: 1.8;
    font-size: 1.1rem;
  }

  .indicator-features {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .indicator-features li {
    padding: 12px 0;
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    line-height: 1.6;
    border-bottom: 1px solid rgba(0, 255, 65, 0.1);
  }

  .indicator-features li:last-child {
    border-bottom: none;
  }

  .indicator-visual {
    position: relative;
  }

  .indicator-visual-container {
    position: relative;
    border-radius: 15px;
    overflow: hidden;
    border: 2px solid rgba(0, 255, 65, 0.3);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    background: rgba(10, 10, 10, 0.8);
  }

  .indicator-visual-container img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 1024px) {
    .indicators {
      padding: 60px 15px;
    }

    .indicator-item {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .indicator-item.reverse {
      direction: ltr;
    }
  }

  @media (max-width: 640px) {
    .indicators {
      padding: 50px 10px;
    }

    .indicators-grid {
      gap: 40px;
    }

    .indicator-item {
      gap: 30px;
    }
  }
</style>

{% schema %}
{
  "name": "Indicators",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Professional Trading Indicators"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Advanced tools to identify high-probability trading opportunities"
    }
  ],
  "blocks": [
    {
      "type": "indicator",
      "name": "Indicator",
      "settings": [
        {
          "type": "text",
          "id": "version",
          "label": "Version Badge",
          "default": "Version 3.1"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Indicator Name",
          "default": "Sharp Shooter Candles"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "textarea",
          "id": "features",
          "label": "Features (one per line)",
          "default": "✓ Buy/Sell Signals\n✓ Reversal Candles\n✓ MACD Integration"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Indicator Screenshot"
        },
        {
          "type": "text",
          "id": "fallback_image",
          "label": "Fallback Image Filename (from assets folder)",
          "default": "sharp-shooter-candles.jpg",
          "info": "Used if no image is uploaded above"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Indicators"
    }
  ]
}
{% endschema %}