<section class="indicators">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <h2>{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_subtitle }}</p>
    </div>

    <!-- Indicators -->
    {% for block in section.blocks %}
      <div class="indicator-item {% if forloop.index == 2 %}reverse{% endif %}">
        <div class="indicator-content">
          <div class="indicator-badge">{{ block.settings.version }}</div>
          <h2>{{ block.settings.title }}</h2>
          <p class="indicator-description">{{ block.settings.description }}</p>
          <ul class="indicator-features">
            {% assign features = block.settings.features | newline_to_br | split: '<br />' %}
            {% for feature in features %}
              {% if feature != blank %}
                <li>{{ feature }}</li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
        <div class="indicator-visual">
          <div class="indicator-visual-container">
            {% if block.settings.video_file != blank %}
              <!-- Video from assets -->
              <video autoplay loop muted playsinline>
                <source src="{{ block.settings.video_file | asset_url }}" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            {% elsif block.settings.image != blank %}
              <!-- Image -->
              <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}">
            {% else %}
              <!-- Fallback Image -->
              <img src="{{ block.settings.fallback_image | asset_url }}" alt="{{ block.settings.title }}">
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .indicators {
    padding: 80px 20px;
    background: #050807;
    border-top: 1px solid rgba(0, 255, 65, 0.2);
    border-bottom: 1px solid rgba(0, 255, 65, 0.2);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .indicator-item {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    margin-bottom: 80px;
  }

  .indicator-item:last-child {
    margin-bottom: 0;
  }

  .indicator-item.reverse {
    direction: rtl;
  }

  .indicator-item.reverse > * {
    direction: ltr;
  }

  .indicator-badge {
    display: inline-block;
    padding: 6px 16px;
    background: rgba(0, 255, 65, 0.1);
    border: 1px solid rgba(0, 255, 65, 0.3);
    border-radius: 50px;
    color: #00ff41;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .indicator-content h2 {
    font-size: 2.5rem;
    color: white;
    margin-bottom: 20px;
    font-weight: 700;
  }

  .indicator-description {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.8;
    margin-bottom: 25px;
  }

  .indicator-features {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .indicator-features li {
    padding: 12px 0;
    color: rgba(255, 255, 255, 0.85);
    font-size: 1rem;
    border-bottom: 1px solid rgba(0, 255, 65, 0.1);
  }

  .indicator-features li:last-child {
    border-bottom: none;
  }

  .indicator-visual-container {
    background: linear-gradient(135deg, rgba(0, 255, 65, 0.03) 0%, rgba(0, 255, 65, 0.01) 100%);
    padding: 20px;
    border-radius: 24px;
    border: 2px solid rgba(0, 255, 65, 0.3);
    box-shadow: inset 0 0 30px rgba(0, 255, 65, 0.1), 0 8px 32px rgba(0, 0, 0, 0.3);
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .indicator-visual-container img,
  .indicator-visual-container video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 16px;
  }

  @media (max-width: 968px) {
    .indicator-item {
      grid-template-columns: 1fr;
      gap: 40px;
      margin-bottom: 60px;
    }

    .indicator-item.reverse {
      direction: ltr;
    }

    .indicator-content h2 {
      font-size: 2rem;
    }

    .indicator-visual-container {
      height: 300px;
    }
  }
</style>

