<section class="indicators">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <h2>{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_subtitle }}</p>
    </div>

    <!-- Indicators -->
    {% for block in section.blocks %}
      <div class="indicator-item {% if forloop.index == 2 %}reverse{% endif %}">
        <div class="indicator-content">
          <div class="indicator-badge">{{ block.settings.version }}</div>
          <h2>{{ block.settings.title }}</h2>
          <p class="indicator-description">{{ block.settings.description }}</p>
          <ul class="indicator-features">
            {% assign features = block.settings.features | newline_to_br | split: '<br />' %}
            {% for feature in features %}
              {% if feature != blank %}
                <li>{{ feature }}</li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
        <div class="indicator-visual">
          <div class="indicator-visual-container">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}">
            {% else %}
              <img src="{{ block.settings.fallback_image | asset_url }}" alt="{{ block.settings.title }}">
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .indicators {
    padding: 80px 20px;
    background: #050807;
    border-top: 1px solid rgba(0, 255, 65, 0.2);
    border-bottom: 1px solid rgba(0, 255, 65, 0.2);
  }

  .indicator-visual-container {
    background: linear-gradient(135deg, rgba(0, 255, 65, 0.03) 0%, rgba(0, 255, 65, 0.01) 100%);
    padding: 20px;
    border-radius: 24px;
    border: 2px solid rgba(0, 255, 65, 0.3);
    box-shadow: inset 0 0 30px rgba(0, 255, 65, 0.1), 0 8px 32px rgba(0, 0, 0, 0.3);
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .indicator-visual-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: left center;
    border-radius: 16px;
  }
</style>

