    border-bottom: none;
  }

  .plan-selector {
    background: rgba(0, 255, 65, 0.05);
    border: 1px solid rgba(0, 255, 65, 0.3);
    border-radius: 15px;
    padding: 25px;
    margin-bottom: 30px;
  }

