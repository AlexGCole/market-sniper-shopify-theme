{% comment %}
  sections/pricing.liquid
  Pricing section with green theme - Setup fee as separate optional product
{% endcomment %}

<section class="pricing-section" id="pricing">
  <div class="container">
    <div class="section-header">
      <h2>{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_subtitle }}</p>
    </div>

    <div class="pricing-wrapper">
      {% for block in section.blocks %}
        {% if block.type == 'pricing_header' %}
          <div class="pricing-category-header" {{ block.shopify_attributes }}>
            <h3 class="category-title">{{ block.settings.header_text }}</h3>
            <div class="category-divider"></div>
          </div>
        {% endif %}

        {% if block.type == 'pricing_plan' %}
          <div class="pricing-card {% if block.settings.is_popular %}featured{% endif %}" {{ block.shopify_attributes }}>
            {% if block.settings.is_popular %}
              <span class="popular-badge">Most Popular</span>
            {% endif %}
            
            <div class="plan-header">
              <h3 class="plan-name">{{ block.settings.plan_name }}</h3>
              
              <div class="plan-price">
                <span class="price-amount">${{ block.settings.price }}</span>
                <span class="price-period">/{{ block.settings.period }}</span>
              </div>
              
              {% if block.settings.savings_text != blank %}
                <div class="savings-badge">{{ block.settings.savings_text }}</div>
              {% endif %}
            </div>

            <ul class="feature-list">
              {% assign features = block.settings.features | newline_to_br | split: '<br />' %}
              {% for feature in features %}
                {% if feature != blank %}
                  <li>{{ feature }}</li>
                {% endif %}
              {% endfor %}
            </ul>

            {% if block.settings.button_link != blank %}
              <a href="{{ block.settings.button_link }}" class="cta-button {% if block.settings.is_popular %}primary{% else %}secondary{% endif %}">
                {{ block.settings.button_text }}
              </a>
            {% else %}
              <a href="#" class="cta-button secondary" onclick="alert('Please configure product link'); return false;">
                {{ block.settings.button_text }}
              </a>
            {% endif %}
          </div>
        {% endif %}

        {% if block.type == 'setup_fee_addon' %}
          <div class="pricing-card setup-addon" {{ block.shopify_attributes }}>
            <span class="addon-badge">Optional Add-on</span>
            
            <div class="plan-header">
              <h3 class="plan-name">{{ block.settings.addon_name }}</h3>
              
              <div class="plan-price">
                <span class="price-amount">${{ block.settings.addon_price }}</span>
                <span class="price-period">one-time</span>
              </div>
            </div>

            <ul class="feature-list">
              {% assign features = block.settings.addon_features | newline_to_br | split: '<br />' %}
              {% for feature in features %}
                {% if feature != blank %}
                  <li>{{ feature }}</li>
                {% endif %}
              {% endfor %}
            </ul>

            {% if block.settings.addon_button_link != blank %}
              <a href="{{ block.settings.addon_button_link }}" class="cta-button secondary">
                {{ block.settings.addon_button_text }}
              </a>
            {% else %}
              <a href="#" class="cta-button secondary" onclick="alert('Please configure product link'); return false;">
                {{ block.settings.addon_button_text }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
.pricing-section {
  padding: 80px 20px;
  background: #050807;
  border-top: 1px solid rgba(0, 255, 65, 0.2);
  border-bottom: 1px solid rgba(0, 255, 65, 0.2);
}

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-header h2 {
    font-size: 2.5rem;
    color: white;
    margin-bottom: 15px;
  }

  .section-header p {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .pricing-wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 30px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .pricing-category-header {
    flex-basis: 100%;
    width: 100%;
    text-align: center;
    margin: 40px 0 20px 0;
  }

  .pricing-category-header:first-of-type {
    margin-top: 0;
  }

  .category-title {
    font-size: 2rem;
    color: #00ff41;
    margin-bottom: 20px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .category-divider {
    width: 100px;
    height: 3px;
    background: linear-gradient(90deg, transparent, #00ff41, transparent);
    margin: 0 auto;
  }

  .pricing-card {
    flex: 0 1 320px;
    max-width: 380px;
    background: rgba(0, 255, 65, 0.03);
    border: 1px solid rgba(0, 255, 65, 0.2);
    border-radius: 20px;
    padding: 40px 30px;
    position: relative;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .pricing-card:hover {
    transform: translateY(-10px);
    border-color: #00ff41;
    box-shadow: 0 20px 40px rgba(0, 255, 65, 0.25);
  }

  .pricing-card.featured {
    border-color: #00ff41;
    background: rgba(0, 255, 65, 0.06);
    box-shadow: 0 10px 30px rgba(0, 255, 65, 0.2);
    transform: scale(1.05);
  }

  .pricing-card.featured:hover {
    transform: scale(1.05) translateY(-10px);
  }

  .pricing-card.setup-addon {
    background: rgba(255, 165, 0, 0.03);
    border-color: rgba(255, 165, 0, 0.3);
  }

  .pricing-card.setup-addon:hover {
    border-color: #ffa500;
    box-shadow: 0 20px 40px rgba(255, 165, 0, 0.25);
  }

  .pricing-card.setup-addon .plan-name {
    color: #ffa500;
  }

  .pricing-card.setup-addon .price-amount {
    color: #ffa500;
  }

  .pricing-card.setup-addon .price-period {
    color: rgba(255, 165, 0, 0.7);
  }

  .pricing-card.setup-addon .cta-button.secondary {
    border-color: #ffa500;
    color: #ffa500;
  }

  .pricing-card.setup-addon .cta-button.secondary:hover {
    background: rgba(255, 165, 0, 0.1);
  }

  .popular-badge {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(135deg, #00ff41, #00cc33);
    color: #000;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .addon-badge {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(135deg, #ffa500, #ff8c00);
    color: #000;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .plan-header {
    text-align: center;
    margin-bottom: 30px;
  }

  .plan-name {
    font-size: 1.5rem;
    color: #00ff41;
    margin-bottom: 20px;
    font-weight: 700;
  }

  .plan-price {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
    margin: 15px 0;
  }

  .price-amount {
    font-size: 3.5rem;
    font-weight: 800;
    color: #00ff41;
    line-height: 1;
  }

  .price-period {
    font-size: 1.2rem;
    color: rgba(0, 255, 65, 0.7);
    align-self: flex-end;
    margin-bottom: 10px;
  }

  .savings-badge {
    display: inline-block;
    background: rgba(0, 255, 65, 0.2);
    color: #00ff41;
    padding: 5px 15px;
    border-radius: 15px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-top: 10px;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 30px 0;
    flex-grow: 1;
  }

  .feature-list li {
    padding: 12px 0;
    padding-left: 0;
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.95rem;
    border-bottom: 1px solid rgba(0, 255, 65, 0.1);
  }

  .pricing-card.setup-addon .feature-list li {
    border-bottom: 1px solid rgba(255, 165, 0, 0.1);
  }

  .feature-list li:last-child {
    border-bottom: none;
  }

  .cta-button {
    width: 100%;
    padding: 15px 30px;
    border: none;
    border-radius: 10px;
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: auto;
  }

  .cta-button.primary {
    background: linear-gradient(135deg, #00ff41, #00cc33);
    color: #000;
    box-shadow: 0 4px 15px rgba(0, 255, 65, 0.4);
  }

  .cta-button.primary:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(0, 255, 65, 0.6);
    background: linear-gradient(135deg, #00ff41, #00dd3a);
  }

  .cta-button.secondary {
    background: transparent;
    border: 2px solid #00ff41;
    color: #00ff41;
  }

  .cta-button.secondary:hover {
    background: rgba(0, 255, 65, 0.1);
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .pricing-card {
      flex: 1 1 100%;
      max-width: 100%;
    }

    .pricing-card.featured {
      transform: scale(1);
    }

    .pricing-card.featured:hover {
      transform: translateY(-10px);
    }

    .category-title {
      font-size: 1.5rem;
    }

    .price-amount {
      font-size: 2.5rem;
    }
  }

  /* Hide Coaching & Indicators section completely */
  /* Hide the first category header (Coaching & Indicators) */
  .pricing-category-header:nth-of-type(1) {
    display: none !important;
  }
  
  /* Hide the first two pricing cards (Coaching Monthly & Annual) */
  .pricing-card:nth-of-type(1),
  .pricing-card:nth-of-type(2) {
    display: none !important;
  }
  
  /* Bot Suite section and its cards will now be visible */
</style>

