{% comment %}
  sections/pricing.liquid
  Updated to support Shopify subscription products
{% endcomment %}

<section class="pricing-section" id="pricing">
  <div class="container">
    <div class="section-header">
      <h2>{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_subtitle }}</p>
    </div>

    <div class="pricing-grid">
      {% for block in section.blocks %}
        {% if block.type == 'pricing_plan' %}
          <div class="pricing-card" {{ block.shopify_attributes }}>
            {% if block.settings.is_popular %}
              <span class="popular-badge">Most Popular</span>
            {% endif %}
            
            <div class="plan-header">
              <h3 class="plan-name">{{ block.settings.plan_name }}</h3>
              <div class="plan-price">
                {% if block.settings.setup_fee and block.settings.setup_fee != '0' %}
                  <div class="setup-fee">
                    <span class="fee-amount">${{ block.settings.setup_fee }}</span>
                    <span class="fee-label">one-time setup</span>
                  </div>
                {% endif %}
                <span class="price-amount">${{ block.settings.price }}</span>
                <span class="price-period">/{{ block.settings.period }}</span>
              </div>
            </div>

            <ul class="feature-list">
              {% assign features = block.settings.features | newline_to_br | split: '<br />' %}
              {% for feature in features %}
                {% if feature != blank %}
                  <li>{{ feature }}</li>
                {% endif %}
              {% endfor %}
            </ul>

            {% if block.settings.shopify_product_handle != blank %}
              {%- assign subscription_product = all_products[block.settings.shopify_product_handle] -%}
              
              {% if subscription_product %}
                <form action="/cart/add" method="post" class="subscription-form">
                  <input type="hidden" name="id" value="{{ subscription_product.selected_or_first_available_variant.id }}">
                  
                  {% comment %} If product has selling plans (subscriptions) {% endcomment %}
                  {% if subscription_product.selling_plan_groups.size > 0 %}
                    {% assign selling_plan_group = subscription_product.selling_plan_groups.first %}
                    <input type="hidden" name="selling_plan" value="{{ selling_plan_group.selling_plans.first.id }}">
                  {% endif %}
                  
                  <button type="submit" class="cta-button primary">
                    {{ block.settings.button_text }}
                  </button>
                </form>
              {% else %}
                {%- comment -%} Fallback if product not found {%- endcomment -%}
                <a href="{{ block.settings.button_link }}" class="cta-button primary">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            {% else %}
              {%- comment -%} Use external link if no Shopify product {%- endcomment -%}
              <a href="{{ block.settings.button_link }}" class="cta-button primary">
                {{ block.settings.button_text }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .pricing-section {
    padding: 80px 20px;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 100%);
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin-top: 60px;
  }

  .pricing-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 40px 30px;
    position: relative;
    transition: all 0.3s ease;
  }

  .pricing-card:hover {
    transform: translateY(-10px);
    border-color: var(--primary-color, #00d9ff);
    box-shadow: 0 20px 40px rgba(0, 217, 255, 0.2);
  }

  .popular-badge {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(135deg, #00d9ff, #00a8cc);
    color: white;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .plan-name {
    font-size: 1.5rem;
    color: white;
    margin-bottom: 15px;
  }

  .setup-fee {
    display: flex;
    flex-direction: column;
    margin-bottom: 10px;
    padding-bottom: 10px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .fee-amount {
    font-size: 1.2rem;
    color: #00d9ff;
    font-weight: 600;
  }

  .fee-label {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .plan-price {
    display: flex;
    flex-direction: column;
    margin-bottom: 30px;
  }

  .price-amount {
    font-size: 3rem;
    font-weight: 700;
    color: white;
    line-height: 1;
  }

  .price-period {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 30px 0;
  }

  .feature-list li {
    padding: 12px 0;
    color: rgba(255, 255, 255, 0.8);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .subscription-form {
    width: 100%;
  }

  .cta-button {
    width: 100%;
    padding: 15px 30px;
    border: none;
    border-radius: 10px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .cta-button.primary {
    background: linear-gradient(135deg, #00d9ff, #00a8cc);
    color: white;
  }

  .cta-button.primary:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 30px rgba(0, 217, 255, 0.4);
  }
</style>

{% schema %}
{
  "name": "Pricing Section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Choose Your Plan"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "Flexible pricing options"
    }
  ],
  "blocks": [
    {
      "type": "pricing_plan",
      "name": "Pricing Plan",
      "settings": [
        {
          "type": "text",
          "id": "plan_name",
          "label": "Plan Name",
          "default": "Monthly"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price (numbers only)",
          "default": "79"
        },
        {
          "type": "text",
          "id": "period",
          "label": "Period",
          "default": "mo"
        },
        {
          "type": "text",
          "id": "setup_fee",
          "label": "One-time Setup Fee (optional, numbers only)",
          "info": "Leave blank or 0 for no setup fee"
        },
        {
          "type": "checkbox",
          "id": "is_popular",
          "label": "Mark as Popular",
          "default": false
        },
        {
          "type": "textarea",
          "id": "features",
          "label": "Features (one per line)",
          "default": "✓ Feature 1\n✓ Feature 2\n✓ Feature 3"
        },
        {
          "type": "product",
          "id": "shopify_product_handle",
          "label": "Shopify Subscription Product",
          "info": "Select the subscription product from your Shopify store"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Fallback Button Link",
          "info": "Used if no Shopify product is selected"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Get Started"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Pricing",
      "blocks": [
        {
          "type": "pricing_plan"
        }
      ]
    }
  ]
}
{% endschema %}