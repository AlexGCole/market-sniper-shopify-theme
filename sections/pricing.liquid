        <a href="https://buy.stripe.com/3csbJB8HF6YI6EU14d" class="cta-button secondary">
          Get Started
        </a>
      </div>

      <!-- YEARLY COACHING -->
      <div class="pricing-card featured">
        <span class="popular-badge">Most Popular</span>
        
        <div class="plan-header">
          <h3 class="plan-name">Yearly</h3>
          <div class="plan-price">
            <span class="price-amount">$660</span>
            <span class="price-period">/yr</span>
          </div>
          <div class="savings-badge">Save 30%</div>
        </div>

        <ul class="feature-list">
          <li>✓ Private Discord Access</li>
          <li>✓ Sharp Shooter Candles 3.1</li>
          <li>✓ Sharp Shooter RSI 2.0</li>
          <li>✓ Sniper Bot Alerts</li>
          <li>✓ 60+ Hours Coaching Videos</li>
          <li>✓ Private Discussion Group</li>
          <li>✓ Priority Support</li>
        </ul>

        <a href="https://buy.stripe.com/9AQaFx0b9beY3sI28q" class="cta-button primary">
          Get Started
        </a>
      </div>

      <!-- AUTOMATED TRADING HEADER -->
      <div class="pricing-category-header">
        <h3 class="category-title">Automated Trading</h3>
        <div class="category-divider"></div>
      </div>

      <!-- BOT PLAN MONTHLY -->
      <div class="pricing-card">
        <div class="plan-header">
          <h3 class="plan-name">Bot Plan</h3>
          
          <div class="setup-fee-badge">
            <span class="fee-amount">$249</span>
            <span class="fee-label">one-time setup</span>
          </div>
          
          <div class="plan-price">
            <span class="price-amount">$49</span>
            <span class="price-period">/mo</span>
          </div>
        </div>

        <ul class="feature-list">
          <li>✓ Private Discord Access</li>
          <li>✓ Private Sniper Bot Discussion Channel</li>
          <li>✓ Automated Trading Bot</li>
          <li>✓ Bot Configuration & Setup</li>
          <li>✓ Ongoing Bot Optimization</li>
          <li>✓ Priority Bot Support</li>
        </ul>

        <a href="/products/trading-bot-suite-49" class="cta-button secondary">
          Get Started
        </a>
      </div>

    </div>
  </div>
</section>

<style>
  .pricing-section {
    padding: 80px 20px;
    background: linear-gradient(135deg, #0a0a0a 0%, #0d1b0d 100%);
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-header h2 {
    font-size: 2.5rem;
    color: white;
    margin-bottom: 15px;
  }

  .section-header p {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .pricing-wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 30px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .pricing-category-header {
    flex-basis: 100%;
    width: 100%;
    text-align: center;
    margin: 40px 0 20px 0;
  }

  .pricing-category-header:first-of-type {
    margin-top: 0;
  }

  .category-title {
    font-size: 2rem;
    color: #00ff41;
    margin-bottom: 20px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .category-divider {
    width: 100px;
    height: 3px;
    background: linear-gradient(90deg, transparent, #00ff41, transparent);
    margin: 0 auto;
  }

  .pricing-card {
    flex: 0 1 320px;
    max-width: 380px;
    background: rgba(0, 255, 65, 0.03);
    border: 1px solid rgba(0, 255, 65, 0.2);
    border-radius: 20px;
    padding: 40px 30px;
    position: relative;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .pricing-card:hover {
    transform: translateY(-10px);
    border-color: #00ff41;
    box-shadow: 0 20px 40px rgba(0, 255, 65, 0.25);
  }

  .pricing-card.featured {
    border-color: #00ff41;
    background: rgba(0, 255, 65, 0.06);
    box-shadow: 0 10px 30px rgba(0, 255, 65, 0.2);
    transform: scale(1.05);
  }

  .pricing-card.featured:hover {
    transform: scale(1.05) translateY(-10px);
  }

  .popular-badge {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(135deg, #00ff41, #00cc33);
    color: #000;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .plan-header {
    text-align: center;
    margin-bottom: 30px;
  }

  .plan-name {
    font-size: 1.5rem;
    color: #00ff41;
    margin-bottom: 20px;
    font-weight: 700;
  }

  .setup-fee-badge {
    display: inline-block;
    background: rgba(0, 255, 65, 0.15);
    border: 1px solid rgba(0, 255, 65, 0.4);
    border-radius: 10px;
    padding: 10px 20px;
    margin-bottom: 15px;
  }

  .fee-amount {
    display: block;
    font-size: 1.3rem;
    color: #00ff41;
    font-weight: 700;
  }

  .fee-label {
    display: block;
    font-size: 0.8rem;
    color: rgba(0, 255, 65, 0.8);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 2px;
  }

  .plan-price {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
    margin: 15px 0;
  }

  .price-amount {
    font-size: 3.5rem;
    font-weight: 800;
    color: #00ff41;
    line-height: 1;
  }

  .price-period {
    font-size: 1.2rem;
    color: rgba(0, 255, 65, 0.7);
    align-self: flex-end;
    margin-bottom: 10px;
  }

  .savings-badge {
    display: inline-block;
    background: rgba(0, 255, 65, 0.2);
    color: #00ff41;
    padding: 5px 15px;
    border-radius: 15px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-top: 10px;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 30px 0;
    flex-grow: 1;
  }

  .feature-list li {
    padding: 12px 0;
    padding-left: 0;
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.95rem;
    border-bottom: 1px solid rgba(0, 255, 65, 0.1);
  }

  .feature-list li:last-child {
    border-bottom: none;
  }

  .cta-button {
    width: 100%;
    padding: 15px 30px;
    border: none;
    border-radius: 10px;
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: auto;
  }

  .cta-button.primary {
    background: linear-gradient(135deg, #00ff41, #00cc33);
    color: #000;
    box-shadow: 0 4px 15px rgba(0, 255, 65, 0.4);
  }

  .cta-button.primary:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(0, 255, 65, 0.6);
    background: linear-gradient(135deg, #00ff41, #00dd3a);
  }

  .cta-button.secondary {
    background: transparent;
    border: 2px solid #00ff41;
    color: #00ff41;
  }

  .cta-button.secondary:hover {
    background: rgba(0, 255, 65, 0.1);
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .pricing-card {
      flex: 1 1 100%;
      max-width: 100%;
    }

    .pricing-card.featured {
      transform: scale(1);
    }

    .pricing-card.featured:hover {
      transform: translateY(-10px);
    }

    .category-title {
      font-size: 1.5rem;
    }

    .price-amount {
      font-size: 2.5rem;
    }
  }
</style>

