{% comment %}
  sections/products-overview.liquid
  Products overview page showcasing Bot Suite and Coaching
{% endcomment %}

<div class="products-page" data-section-id="{{ section.id }}" data-section-type="products-overview">
  <!-- Compact Hero Section -->
  <section class="products-hero-compact">
    <div class="container">
      <h1 class="products-hero-title animate-slide-left">Choose Your <span class="gradient-text">Trading Path</span></h1>
    </div>
  </section>

  <!-- Bot Suite Section -->
  <section class="product-showcase bot-suite-section">
    <div class="container">
      <div class="product-header animate-slide-left">
        <span class="product-badge">Main Product</span>
        <h2>Bot Suite</h2>
        <p class="product-tagline">Proven trading strategies with automation capabilities</p>
      </div>

      <div class="product-pricing">
        {% assign monthly_product = all_products['bot-suite-monthly'] %}
        {% if monthly_product != blank %}
          <div class="pricing-option featured">
            <span class="popular-tag">Most Popular</span>
            <div class="price-header">
              <h4>Monthly</h4>
              <div class="price">
                <span class="amount">${{ monthly_product.price | divided_by: 100 }}</span>
                <span class="period">/mo</span>
              </div>
            </div>
            <ul class="plan-features">
              {% assign features_list = monthly_product.description | split: '
' %}
              {% for feature in features_list %}
                {% assign stripped_feature = feature | strip %}
                {% if stripped_feature != blank and stripped_feature != '' %}
                  <li>{{ stripped_feature }}</li>
                {% endif %}
              {% endfor %}
            </ul>
            <a href="{{ monthly_product.url }}" class="btn btn-primary">Get Started</a>
          </div>
        {% endif %}

        {% assign annual_product = all_products['bot-suite-annual'] %}
        {% if annual_product != blank %}
          <div class="pricing-option">
            <div class="price-header">
              <h4>Annual</h4>
              <div class="price">
                <span class="amount">${{ annual_product.price | divided_by: 100 }}</span>
                <span class="period">/yr</span>
              </div>
              <span class="savings">Save $98/year</span>
            </div>
            <ul class="plan-features">
              {% assign features_list = annual_product.description | split: '
' %}
              {% for feature in features_list %}
                {% assign stripped_feature = feature | strip %}
                {% if stripped_feature != blank and stripped_feature != '' %}
                  <li>{{ stripped_feature }}</li>
                {% endif %}
              {% endfor %}
            </ul>
            <a href="{{ annual_product.url }}" class="btn btn-primary">Get Started</a>
          </div>
        {% endif %}

        {% assign setup_product = all_products['bot-suite-setup'] %}
        {% if setup_product != blank %}
          <div class="pricing-option addon">
            <span class="popular-tag">Optional<br>Add-on</span>
            <div class="price-header">
              <h4>Setup</h4>
              <div class="price">
                <span class="amount">${{ setup_product.price | divided_by: 100 }}</span>
                <span class="period">one-time</span>
              </div>
            </div>
            <ul class="plan-features">
              {% assign features_list = setup_product.description | split: '
' %}
              {% for feature in features_list %}
                {% assign stripped_feature = feature | strip %}
                {% if stripped_feature != blank and stripped_feature != '' %}
                  <li>{{ stripped_feature }}</li>
                {% endif %}
              {% endfor %}
            </ul>
            <a href="{{ setup_product.url }}" class="btn btn-secondary">Add Setup Service</a>
          </div>
        {% endif %}
      </div>
    </div>
  </section>

