{% comment %}
  sections/products-overview.liquid
  Products overview page showcasing Bot Suite and Coaching
{% endcomment %}

<div class="products-page" data-section-id="{{ section.id }}" data-section-type="products-overview">
  <!-- Hero Section -->
  <section class="products-hero">
    <div class="container">
      <h1>All Products</h1>
      <p>Professional trading tools and education to elevate your trading</p>
    </div>
  </section>

  <!-- Bot Suite Section -->
  <section class="product-showcase bot-suite-section">
    <div class="container">
      <div class="product-header">
        <span class="product-badge">Main Product</span>
        <h2>Bot Suite</h2>
        <p class="product-tagline">Proven strategies with optional automation - your choice</p>
      </div>

      <div class="product-content">
        <div class="product-info">
          <h3>What's Included:</h3>
          <ul class="feature-list">
            <li>Proven Trading Strategies</li>
            <li>Sharp Shooter Candles 4.2</li>
            <li>Sharp Shooter RSI 2.0</li>
            <li>Optional Bot Automation</li>
            <li>Private Discord Community</li>
            <li>Priority Support</li>
          </ul>
        </div>

        <div class="product-pricing">
          <div class="pricing-option">
            <div class="price-header">
              <h4>Monthly</h4>
              <div class="price">
                <span class="amount">$49</span>
                <span class="period">/mo</span>
              </div>
            </div>
            <a href="/products/bot-suite-monthly" class="btn btn-primary">Get Started</a>
          </div>

          <div class="pricing-option featured">
            <span class="popular-tag">Most Popular</span>
            <div class="price-header">
              <h4>Annual</h4>
              <div class="price">
                <span class="amount">$490</span>
                <span class="period">/yr</span>
              </div>
              <span class="savings">Save $98/year</span>
            </div>
            <a href="/products/bot-suite-annual" class="btn btn-primary">Get Started</a>
          </div>

          <div class="pricing-option addon">
            <span class="popular-tag">Optional Add-on</span>
            <div class="price-header">
              <h4>Setup</h4>
              <div class="price">
                <span class="amount">$249</span>
                <span class="period">one-time</span>
              </div>
            </div>
            <ul class="addon-features">
              <li>Complete Bot Installation</li>
              <li>TradingView Integration</li>
              <li>Strategy Configuration</li>
              <li>Alert Setup & Testing</li>
              <li>1-on-1 Setup Support</li>
            </ul>
            <a href="/products/setup-service" class="btn btn-secondary">Add Setup Service</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Recorded Coaching Section -->
  <section class="product-showcase coaching-section">
    <div class="container">
      <div class="product-header">
        <span class="product-badge coming-soon">Coming Soon</span>
        <h2>Recorded Coaching</h2>
        <p class="product-tagline">Comprehensive trading education at your own pace</p>
      </div>

      <div class="product-content coming-soon-content">
        <div class="product-info">
          <h3>What's Included:</h3>
          <ul class="feature-list">
            <li>✓ 60+ Hours Video Coaching</li>
            <li>✓ Strategy Breakdowns</li>
            <li>✓ Risk Management Training</li>
            <li>✓ Market Analysis Techniques</li>
            <li>✓ Live Trade Reviews</li>
            <li>✓ Lifetime Access to Content</li>
          </ul>
        </div>

        <div class="coming-soon-notice">
          <h3>Launching Soon</h3>
          <p>Comprehensive recorded coaching sessions are in development. Join our Discord to be notified when they launch.</p>
          <a href="/products/bot-suite-monthly" class="btn btn-outline">Join to Get Notified</a>
        </div>
      </div>
    </div>
  </section>
</div>

<style>
  .products-page {
    background: var(--dark);
    min-height: 100vh;
  }

  /* Hero Section */
  .products-hero {
    padding: 120px 20px 60px;
    text-align: center;
    background: linear-gradient(135deg, #0a0a0a 0%, #0d1b0d 100%);
    border-bottom: 1px solid rgba(0, 255, 65, 0.2);
  }

  .products-hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .products-hero p {
    font-size: 1.25rem;
    color: var(--gray-light);
  }

  /* Product Showcase Sections */
  .product-showcase {
    padding: 80px 20px;
  }

  .bot-suite-section {
    background: #0a0a0a;
  }

  .coaching-section {
    background: #0f1e0f;
    border-top: 1px solid rgba(0, 255, 65, 0.2);
  }

  .product-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .product-badge {
    display: inline-block;
    padding: 8px 24px;
    background: rgba(0, 255, 65, 0.2);
    color: var(--primary);
    border-radius: 30px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .product-badge.coming-soon {
    background: rgba(255, 165, 0, 0.2);
    color: #ffa500;
  }

  .product-header h2 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .product-tagline {
    font-size: 1.25rem;
    color: var(--gray-light);
  }

  /* Product Content */
  .product-pricing {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: stretch;
    gap: 24px;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Plan Features inside cards */
  .plan-features {
    list-style: none;
    padding: 0;
    margin: 30px 0;
    flex-grow: 1;
    text-align: left;
  }

  .plan-features li {
    padding: 12px 0;
    font-size: 0.95rem;
    color: var(--light);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .plan-features li:last-child {
    border-bottom: none;
  }

  .pricing-option.addon .plan-features li {
    border-bottom: 1px solid rgba(255, 165, 0, 0.1);
  }

  .pricing-option.coaching-card {
    background: rgba(0, 255, 65, 0.03);
    border: 2px solid rgba(0, 255, 65, 0.2);
  }

  .pricing-option.coaching-card::before {
    display: none;
  }

  .pricing-option.coaching-card:hover {
    border-color: var(--primary);
    box-shadow: 0 20px 40px rgba(0, 255, 65, 0.25);
  }

  .pricing-option.coaching-card .price-header h4 {
    color: var(--light);
  }

  .pricing-option.coaching-card .price .amount {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .pricing-option.coaching-card .price .period {
    color: var(--gray-light);
  }

  .pricing-option.coaching-card .plan-features li {
    border-bottom: 1px solid rgba(0, 255, 65, 0.1);
  }

  .btn-disabled {
    background: rgba(128, 128, 128, 0.3);
    color: rgba(255, 255, 255, 0.5);
    cursor: not-allowed;
    box-shadow: none;
  }

  .btn-disabled:hover {
    transform: none;
    box-shadow: none;
  }

  /* Coming Soon Notice - Centered */
  .coming-soon-notice-centered {
    background: rgba(0, 255, 65, 0.05);
    border: 2px solid rgba(0, 255, 65, 0.3);
    border-radius: 16px;
    padding: 48px 32px;
    text-align: center;
    max-width: 700px;
    margin: 60px auto 0;
  }

  .coming-soon-notice-centered h3 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--primary-light);
  }

  .coming-soon-notice-centered p {
    font-size: 1.1rem;
    color: var(--gray-light);
    line-height: 1.6;
    margin-bottom: 2rem;
