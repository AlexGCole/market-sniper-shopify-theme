<div class="products-page" data-section-id="{{ section.id }}" data-section-type="products-overview">
  <!-- Compact Hero Section -->
  <section class="products-hero-compact">
    <div class="container">
      <h1 class="products-hero-title animate-slide-left">Choose Your <span class="gradient-text">Trading Path</span></h1>
    </div>
  </section>

  <!-- Bot Suite Section -->
  <section class="product-showcase bot-suite-section">
    <div class="container">
      <div class="product-header animate-slide-left">
        <span class="product-badge">Main Product</span>
        <h2>Bot Suite</h2>
        <p class="product-tagline">Proven trading strategies with automation capabilities</p>
      </div>

      <div class="product-pricing">
        <div class="pricing-option featured">
          <span class="popular-tag">Most Popular</span>
          <div class="price-header">
            <h4>Monthly</h4>
            <div class="price">
              <span class="amount">$49</span>
              <span class="period">/mo</span>
            </div>
          </div>
          <ul class="plan-features">
            <li>✓ Two Battle-Tested Strategies - Sharp Shooter Candles 4.2 & Sharp Shooter RSI 3.2</li>
            <li>✓ 100% Full Automation Capability - Executes trades on your behalf</li>
            <li>✓ New Strategies Monthly - All future releases included at no extra cost</li>
            <li>✓ Private Discord Community - 200+ active traders sharing setups and results</li>
            <li>✓ Priority Support - Email or direct message us in the discord</li>
            <li>✓ Cancel Anytime - No contracts, no questions asked</li>
          </ul>
          <a href="/products/bot-suite-monthly" class="btn btn-primary">Get Started</a>
        </div>

        <div class="pricing-option">
          <div class="price-header">
            <h4>Annual</h4>
            <div class="price">
              <span class="amount">$490</span>
              <span class="period">/yr</span>
            </div>
            <span class="savings">Save $98/year</span>
          </div>
          <ul class="plan-features">
            <li>✓ Everything in Monthly Plan - Both strategies plus all future releases</li>
            <li>✓ Save $98/year - Get 2 months free vs monthly billing</li>
            <li>✓ Lock Your Rate Forever - Price guaranteed never to increase</li>
            <li>✓ Limited Yearly Plans - This option will eventually go away</li>
          </ul>
          <a href="/products/bot-suite-annual" class="btn btn-primary">Get Started</a>
        </div>

        <div class="pricing-option addon">
          <span class="popular-tag">Optional<br>Add-on</span>
          <div class="price-header">
            <h4>Setup</h4>
            <div class="price">
              <span class="amount">$249</span>
              <span class="period">one-time</span>
            </div>
          </div>
          <ul class="plan-features">
            <li>✓ 1-Hour Setup Call - personal video walkthrough with our team</li>
            <li>✓ Bot Installation Walkthrough - We guide you through every step</li>
            <li>✓ TradingView Configuration - Step-by-step help connecting strategies</li>
            <li>✓ Strategy Configuration - Personalized settings for your account</li>
            <li>✓ Alert Setup & Testing - Verify everything works before we hang up</li>
          </ul>
          <a href="/products/bot-suite-setup" class="btn btn-secondary">Add Setup Service</a>
        </div>
      </div>
    </div>
  </section>

