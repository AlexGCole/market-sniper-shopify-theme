{% comment %}
  sections/trading-bot.liquid
  Trading bot showcase section with updated icons and card layout
{% endcomment %}

<section class="trading-bot" id="trading-bot">
  <div class="container">
    <div class="bot-header">
      <h2>{{ section.settings.title }}</h2>
      <p class="bot-subtitle">{{ section.settings.subtitle }}</p>
    </div>

    <div class="bot-features-grid">
      {% for block in section.blocks %}
        <div class="bot-feature-card" {{ block.shopify_attributes }}>
          <div class="bot-feature-icon">
            {% if block.settings.title contains "Automated Trading Alerts" %}
              <!-- Robot Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="7" y="7" width="10" height="12" rx="1"></rect>
                <circle cx="12" cy="12" r="1.5"></circle>
                <line x1="9" y1="16" x2="9" y2="16"></line>
                <line x1="15" y1="16" x2="15" y2="16"></line>
                <path d="M12 3v4"></path>
                <circle cx="12" cy="3" r="1"></circle>
              </svg>
            {% elsif block.settings.title contains "Sharp Shooter Candles" %}
              <!-- Bar Chart Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="4" y1="19" x2="4" y2="14"></line>
                <line x1="10" y1="19" x2="10" y2="8"></line>
                <line x1="16" y1="19" x2="16" y2="11"></line>
                <line x1="22" y1="19" x2="22" y2="6"></line>
              </svg>
            {% elsif block.settings.title contains "Sharp Shooter RSI" %}
              <!-- Trending Up Line Chart Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="22 7 13.5 15.5 8.5 10.5 2 17"></polyline>
                <polyline points="16 7 22 7 22 13"></polyline>
              </svg>
            {% elsif block.settings.title contains "Proven Trading Strategies" %}
              <!-- Target/Bullseye Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <circle cx="12" cy="12" r="6"></circle>
                <circle cx="12" cy="12" r="2"></circle>
              </svg>
            {% elsif block.settings.title contains "Private Bot Discussion Channel" %}
              <!-- Message/Chat Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
              </svg>
            {% elsif block.settings.title contains "Priority Support" %}
              <!-- Headphones Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 18v-6a9 9 0 0 1 18 0v6"></path>
                <path d="M21 19a2 2 0 0 1-2 2h-1a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2h3zM3 19a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H3z"></path>
              </svg>
            {% else %}
              <!-- Default Checkmark Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            {% endif %}
          </div>
          <div class="bot-feature-content">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.show_stat %}
      <div class="bot-stat">
        <div class="stat-number">{{ section.settings.stat_number }}</div>
        <div class="stat-label">{{ section.settings.stat_label }}</div>
      </div>
    {% endif %}
  </div>
</section>



<style>
  .trading-bot { 
    padding: 80px 20px;
    background: rgba(10, 10, 10, 0.5);
    border-top: 1px solid rgba(0, 255, 65, 0.2); 
    border-bottom: 1px solid rgba(0, 255, 65, 0.2);
    min-height: 400px;
  }

  .bot-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 60px;
  }

  .bot-badge {
    display: inline-block;
    padding: 8px 24px;
    background: rgba(0, 255, 65, 0.2);
    color: #00ff41;
    border-radius: 30px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .bot-header h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 16px;
    color: white;
  }

  .bot-subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .bot-features-grid {
    display: flex;
    flex-direction: column;
    gap: 20px;
    max-width: 800px;
    margin: 0 auto;
  }

  .bot-feature-card {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 30px;
    background: rgba(0, 255, 65, 0.03);
    border: 1px solid rgba(0, 255, 65, 0.2);
    border-radius: 16px;
    transition: all 0.3s ease;
  }

  .bot-feature-card:hover {
    background: rgba(0, 255, 65, 0.06);
    border-color: rgba(0, 255, 65, 0.3);
    transform: translateY(-2px);
  }

  .bot-feature-icon {
    width: 50px;
    height: 50px;
    background: #00ff41;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .bot-feature-card:hover .bot-feature-icon {
    transform: scale(1.05);
    box-shadow: 0 0 20px rgba(0, 255, 65, 0.4);
  }

  .bot-feature-icon svg {
    width: 25px;
    height: 25px;
    color: #000;
    stroke-width: 2;
  }

  .bot-feature-content {
    flex: 1;
  }

  .bot-feature-content h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 10px;
    color: white;
  }

  .bot-feature-content p {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
    margin: 0;
  }

  .bot-stat {
    text-align: center;
    margin-top: 60px;
    padding: 40px;
    background: rgba(0, 255, 65, 0.1);
    border-radius: 20px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .stat-number {
    font-size: 4rem;
    font-weight: 800;
    background: linear-gradient(135deg, #00ff41, #00cc33);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .stat-label {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
  }

  @media (max-width: 968px) {
    .trading-bot {
      padding: 60px 15px;
    }

    .bot-features-grid {
      gap: 15px;
    }

    .bot-feature-card {
      padding: 20px;
    }

    .bot-feature-content h3 {
      font-size: 1.1rem;
    }

    .bot-feature-content p {
      font-size: 0.95rem;
    }
  }
</style>

{% schema %}
{
  "name": "Trading Bot",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Now Available"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Professional Indicators & Trading Strategies"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Everything you need for successful trading in one complete package"
    },
    {
      "type": "checkbox",
      "id": "show_stat",
      "label": "Show Stat",
      "default": true
    },
    {
      "type": "text",
      "id": "stat_number",
      "label": "Stat Number",
      "default": "2+"
    },
    {
      "type": "text",
      "id": "stat_label",
      "label": "Stat Label",
      "default": "Years of Optimization"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Bot Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Feature Description",
          "default": "Feature description goes here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trading Bot"
    }
  ]
}
{% endschema %}
