{% comment %}
  sections/trading-bot.liquid
  Trading bot showcase section with updated icons
{% endcomment %}

<section class="trading-bot" id="trading-bot">
  <div class="container">
    <div class="bot-header">
      {% if section.settings.badge_text != blank %}
        <span class="bot-badge">{{ section.settings.badge_text }}</span>
      {% endif %}
      <h2>{{ section.settings.title }}</h2>
      <p class="bot-subtitle">{{ section.settings.subtitle }}</p>
    </div>

    <div class="bot-features">
      {% for block in section.blocks %}
        <div class="bot-feature-card" {{ block.shopify_attributes }}>
          <div class="bot-feature-icon">
            {% if block.settings.title contains "Automated" or block.settings.title contains "Execution" or block.settings.title contains "Bot" %}
              <!-- Lightning/Automated Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
              </svg>
            {% elsif block.settings.title contains "Indicator" or block.settings.title contains "Sharp Shooter" or block.settings.title contains "Candle" or block.settings.title contains "RSI" %}
              <!-- Chart/Indicator Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="20" x2="18" y2="10"></line>
                <line x1="12" y1="20" x2="12" y2="4"></line>
                <line x1="6" y1="20" x2="6" y2="14"></line>
              </svg>
            {% elsif block.settings.title contains "Strateg" %}
              <!-- Strategy/Target Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <circle cx="12" cy="12" r="6"></circle>
                <circle cx="12" cy="12" r="2"></circle>
              </svg>
            {% elsif block.settings.title contains "Discord" or block.settings.title contains "Channel" or block.settings.title contains "Community" %}
              <!-- Community/Discord Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 00-3-3.87"></path>
                <path d="M16 3.13a4 4 0 010 7.75"></path>
              </svg>
            {% elsif block.settings.title contains "Support" or block.settings.title contains "Priority" %}
              <!-- Support/Headset Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 18v-6a9 9 0 0 1 18 0v6"></path>
                <path d="M21 19a2 2 0 0 1-2 2h-1a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2h3zM3 19a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H3z"></path>
              </svg>
            {% else %}
              <!-- Default Checkmark Icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            {% endif %}
          </div>
          <div class="bot-feature-content">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.show_stat %}
      <div class="bot-stat">
        <div class="stat-number">{{ section.settings.stat_number }}</div>
        <div class="stat-label">{{ section.settings.stat_label }}</div>
      </div>
    {% endif %}
  </div>
</section>



<style>
  .trading-bot { 
    padding: 80px 20px;
    background: rgba(10, 10, 10, 0.5);
    border-top: 1px solid rgba(0, 255, 65, 0.2); 
    border-bottom: 1px solid rgba(0, 255, 65, 0.2); 
  }

  .bot-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 60px;
  }

  .bot-badge {
    display: inline-block;
    padding: 8px 24px;
    background: rgba(0, 255, 65, 0.2);
    color: #00ff41;
    border-radius: 30px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .bot-header h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 16px;
    color: white;
  }

  .bot-subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .bot-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .bot-feature-card {
    display: flex;
    gap: 20px;
    padding: 30px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(0, 255, 65, 0.2);
    border-radius: 15px;
    transition: all 0.3s ease;
  }

  .bot-feature-card:hover {
    transform: translateY(-5px);
    border-color: rgba(0, 255, 65, 0.5);
    background: rgba(0, 255, 65, 0.05);
    box-shadow: 0 10px 30px rgba(0, 255, 65, 0.2);
  }

  .bot-feature-icon {
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(0, 255, 65, 0.1), rgba(0, 255, 65, 0.05));
    border: 2px solid rgba(0, 255, 65, 0.3);
    border-radius: 50%;
  }

  .bot-feature-icon svg {
    width: 32px;
    height: 32px;
    color: #00ff41;
  }

  .bot-feature-content h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 10px;
    color: white;
  }

  .bot-feature-content p {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
  }

  .bot-stat {
    text-align: center;
    margin-top: 60px;
    padding: 40px;
    background: rgba(0, 255, 65, 0.1);
    border-radius: 20px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .stat-number {
    font-size: 4rem;
    font-weight: 800;
    background: linear-gradient(135deg, #00ff41, #00cc33);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .stat-label {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
  }

  @media (max-width: 968px) {
    .trading-bot {
      padding: 60px 15px;
    }

    .bot-features {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .bot-feature-card {
      padding: 25px;
    }
  }
</style>

{% schema %}
{
  "name": "Trading Bot",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Now Available"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Automated Trading Bot"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Trade smarter with our fully automated trading bot solution"
    },
    {
      "type": "checkbox",
      "id": "show_stat",
      "label": "Show Stat",
      "default": true
    },
    {
      "type": "text",
      "id": "stat_number",
      "label": "Stat Number",
      "default": "2+"
    },
    {
      "type": "text",
      "id": "stat_label",
      "label": "Stat Label",
      "default": "Years of Optimization"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Bot Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Feature Description",
          "default": "Feature description goes here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trading Bot"
    }
  ]
}
{% endschema %}