    opacity: 0;
    transform: translateY(40px);
    transition: opacity 0.7s ease-out, transform 0.7s ease-out;
  }

  .animate-indicator.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .animate-indicator.hidden {
    opacity: 0;
    transform: translateY(40px);
  }

