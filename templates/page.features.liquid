    opacity: 0;
    transform: scale(0.95) translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .animate-step-card.visible {
    opacity: 1;
    transform: scale(1) translateY(0);
  }

  .animate-step-card.hidden {
    opacity: 0;
    transform: scale(0.95) translateY(20px);
  }

