<script>
  // Scroll animation trigger - repeatable for all animated elements
  (function() {
    function initScrollAnimations() {
      // One-way animations (stay visible once triggered)
      const oneWayElements = document.querySelectorAll(
        '.animate-section-header, .animate-slide-up-title, .animate-slide-up-tagline, ' +
        '.animate-slide-up-subtitle, .animate-slide-up-cta, .animate-slide-in-card'
      );
      
      const oneWayObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          } else {
            entry.target.classList.remove('visible');
          }
        });
      }, {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      });
      
      oneWayElements.forEach(el => oneWayObserver.observe(el));
      
      // Bidirectional animations (animate on scroll up and down)
      const bidirectionalElements = document.querySelectorAll('.animate-step-card, .animate-indicator, .animate-cta-button');
      
      const bidirectionalObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.remove('hidden');
            entry.target.classList.add('visible');
          } else {
            entry.target.classList.remove('visible');
            entry.target.classList.add('hidden');
          }
        });
      }, {
        threshold: 0.15,
        rootMargin: '0px 0px -100px 0px'
      });
      
      bidirectionalElements.forEach((el, index) => {
        // Add staggered delays for cascading effect (only for step cards)
        if (el.classList.contains('animate-step-card')) {
          el.style.transitionDelay = `${index * 0.08}s`;
        }
        bidirectionalObserver.observe(el);
      });
    }
    
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initScrollAnimations);
    } else {
      initScrollAnimations();
    }
  })();
</script>

