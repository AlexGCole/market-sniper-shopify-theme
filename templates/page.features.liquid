{% section 'header' %}

{% comment %}
  Features page template
{% endcomment %}

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <span class="hero-badge">Professional Trading Tools</span>
      <h1 class="hero-title">
        Bot Suite<br>
        <span class="gradient-text">Automated Trading Made Simple</span>
      </h1>
      <p class="hero-subtitle">Automated trading with professional indicators and strategies - everything you need to trade smarter</p>
      <div class="hero-cta">
        <a href="/pages/products" class="btn btn-primary">View Plans</a>
      </div>
    </div>
  </div>
  <div class="hero-bg"></div>
</section>

{% section 'trading-bot' %}

<section class="indicators" id="indicators">
  <div class="container">
    <div class="section-header">
      <h2>Professional Trading Indicators</h2>
      <p>Advanced tools to identify high-probability trading opportunities</p>
    </div>

    <div class="indicators-grid">
      <div class="indicator-item normal">
        <div class="indicator-content">
          <span class="indicator-badge">Version 4.2</span>
          <h3>Sharp Shooter Candles</h3>
          <p class="indicator-description">Fully customizable indicator with intuitive color-coding. Green for bullish, red for bearish, orange for overbought, and blue for oversold conditions.</p>
          <ul class="indicator-features">
            <li>✓ Buy/Sell Signals</li>
            <li>✓ Reversal Detection</li>
            <li>✓ MACD Settings</li>
            <li>✓ Position Management</li>
            <li>✓ Trending Dots</li>
            <li>✓ Multiple Customization Options</li>
          </ul>
        </div>
        <div class="indicator-visual">
          <div class="indicator-visual-container">
            <img src="{{ 'sharp-shooter-candles.jpg' | asset_url }}" alt="Sharp Shooter Candles">
          </div>
        </div>
      </div>

      <div class="indicator-item reverse">
        <div class="indicator-content">
          <span class="indicator-badge">Version 2.0</span>
          <h3>Sharp Shooter RSI</h3>
          <p class="indicator-description">Gain an edge with advanced RSI divergence detection. Identify trend changes before price action confirms them.</p>
          <ul class="indicator-features">
            <li>✓ RSI Divergences</li>
            <li>✓ Early Buy/Sell Signals</li>
            <li>✓ EMA Trend Identification</li>
            <li>✓ Customizable Length & Style</li>
            <li>✓ Real-time Alerts</li>
          </ul>
        </div>
        <div class="indicator-visual">
          <div class="indicator-visual-container">
            <img src="{{ 'sharp-shooter-rsi.jpg' | asset_url }}" alt="Sharp Shooter RSI">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

