{% comment %}
  This template handles both regular pages and JSON template pages
  For JSON templates, content_for_layout will contain the sections
  For regular pages, we show the basic page content
{% endcomment %}

{% if content_for_layout contains 'shopify-section' %}
  {{ content_for_layout }}
{% else %}
  <div class="container page-content">
    <h1>{{ page.title }}</h1>
    <div class="rte">
      {{ page.content }}
    </div>
  </div>
{% endif %}